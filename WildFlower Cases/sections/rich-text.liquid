<link rel="stylesheet" href="{{ 'component-rte.css' | asset_url }}" media="print" onload="this.media='all'">
<link rel="stylesheet" href="{{ 'section-rich-text.css' | asset_url }}" media="print" onload="this.media='all'">

<noscript>{% render 'hs-defer-css', filename: 'component-rte.css', pages: 'collection,index,product' | split: ',', local: true %}</noscript>
<noscript>{% render 'hs-defer-css', filename: 'section-rich-text.css', pages: 'collection,index,product' | split: ',', local: true %}</noscript>

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  {% if section.settings.background_image != blank %}
  .section-{{ section.id }}-padding {
    background-image:url({{ section.settings.background_image | image_url }});
    background-size:{{ section.settings.background_image_size }};
    background-repeat: no-repeat;
    background-position: center center;
    background-attachment: initial;
  }
  {% endif %}
  
{%- endstyle -%}

<div class="isolate{% unless section.settings.full_width %} page-width{% endunless %}">
  <div class="rich-text content-container color-{{ section.settings.color_scheme }} gradient{% if section.settings.full_width %} rich-text--full-width content-container--full-width{% endif %} section-{{ section.id }}-padding">
    <div class="rich-text__wrapper rich-text__wrapper--{{ section.settings.desktop_content_position }}{% if section.settings.full_width %} page-width{% endif %}">
      <div class="rich-text__blocks {{ section.settings.content_alignment }}">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'heading' -%}
              <h2 class="rich-text__heading rte {{ block.settings.heading_size }}" {{ block.shopify_attributes }}>
                {{ block.settings.heading | replace: 'p>', 'span>' }}
              </h2>
            {%- when 'caption' -%}
              <p class="rich-text__caption {{ block.settings.text_style }} {{ block.settings.text_style }}--{{ block.settings.text_size }}" {{ block.shopify_attributes }}>
                {% capture value_props %}{% render 'value-props', location: 'index' %}{% endcapture %}
                {% capture five_stars %}{% render 'icon-five-stars' %}{% endcapture %}
                {{ block.settings.caption | escape | replace: '[value-props]', value_props | replace: '[five-stars]', five_stars }}
              </p>
            {%- when 'text' -%}
              <div class="rich-text__text rte" {{ block.shopify_attributes }}>
                {{ block.settings.text }}
              </div>
            {%- when 'button' -%}
              <div class="rich-text__buttons{% if block.settings.button_label != blank and block.settings.button_label_2 != blank %} rich-text__buttons--multiple{% endif %}" {{ block.shopify_attributes }}>
                {%- if block.settings.button_label != blank -%}
                  <a {% if block.settings.button_link == blank %} role="link" aria-disabled="true"{% else %} href="{{ block.settings.button_link }}"{% endif %} class="{% if block.settings.button_style_secondary %}button--text{% else%}button button--secondary{% else %} button--primary{% endif %}">{{ block.settings.button_label | escape }}</a>
                {%- endif -%}
              </div>
          {%- endcase -%}
        {%- endfor -%}
      </div>
    </div>
    {% if section.id == 'template--14974851907632__1663081900b6a3bfb6' %}
      <img alt="flower" aria-hidden="true" class="flower-1 lazyload hs-lazyload hs-id-e4ecc580" data-src="{{ 'Flower.png' | asset_url }}" height="24" loading="lazy" role="presentation" src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==" width="24"/>
      <img alt="flower" aria-hidden="true" class="flower-2 lazyload hs-lazyload hs-id-9394cb4e" data-src="{{ 'Flower.png' | asset_url }}" height="24" loading="lazy" role="presentation" src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==" width="24"/>
    {% endif %}
  </div>
</div>

{% if section.id == 'template--14974851907632__1663081900b6a3bfb6' %}
<style>
  .flower-1 {
    position: absolute;
    top: 17px;
    left: 126px;
  }
  .flower-2 {
