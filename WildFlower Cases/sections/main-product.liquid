{% if section.settings.enable_zoom %}
  <script>
  const zoom = (e) => {
    const screenWidth = window.innerWidth || document.documentElement.clientWidth || document.body.clientWidth;
    if(screenWidth >= 750)  {
      var zoomer = e.target.closest('.product__image--zoom');
      zoomer.style.backgroundImage = `url(${zoomer.getAttribute('data-bg')})`;
      e.offsetX ? offsetX = e.offsetX : offsetX = e.touches[0].pageX
      e.offsetY ? offsetY = e.offsetY : offsetX = e.touches[0].pageX
      x = offsetX/zoomer.offsetWidth*100
      y = offsetY/zoomer.offsetHeight*100
      zoomer.style.backgroundPosition = x + '% ' + y + '%';
    }
  };
  document.querySelectorAll('.product__image--zoom').forEach((el) => {
    el.addEventListener('mousemove', (event) => {
      zoom(event);
    });
    el.addEventListener('touchmove', zoom, false);
  });
  </script>
  <style type="text/css">
    @media screen and (min-width: 750px) {
      .product__image--zoom {
        background-position: 50% 50%;
        position: relative;
        overflow: hidden;
        cursor: zoom-in;
      }
      .product__image--zoom:hover img {
        opacity: 0;
      }
    }
  </style>
{% endif %}

