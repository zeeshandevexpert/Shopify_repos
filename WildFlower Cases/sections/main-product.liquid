{% comment %}theme-check-disable TemplateLength, LiquidTag{% endcomment %}
<div id="MainProduct-{{ section.id }}" class="product__main page-width small-full-width section-{{ section.id }}-padding" data-section="{{ section.id }}">
  {% render 'hs-defer-css', filename: 'section-main-product.css', pages: 'collection,index,product' | split: ',', local: true %}
  {% render 'hs-defer-css', filename: 'component-accordion.css', pages: 'collection,index,product' | split: ',', local: true %}
  {% render 'hs-defer-css', filename: 'component-price.css', pages: 'collection,index,product' | split: ',', local: true %}
  {% render 'hs-defer-css', filename: 'component-rte.css', pages: 'collection,index,product' | split: ',', local: true %}
  {% render 'hs-defer-css', filename: 'component-slider.css', pages: 'collection,index,product' | split: ',', local: true %}
  {% render 'hs-defer-css', filename: 'component-rating.css', pages: 'collection,index,product' | split: ',', local: true %}
  {% render 'hs-defer-css', filename: 'component-loading-overlay.css', pages: 'collection,index,product' | split: ',', local: true %}
  {% render 'hs-defer-css', filename: 'component-deferred-media.css', pages: 'collection,index,product' | split: ',', local: true %}
  {% render 'hs-defer-css', filename: 'component-recently-viewed.css', pages: 'collection,index,product' | split: ',', local: true %}

  {%- style -%}
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }

    @media screen and (min-width: 750px) {
      .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
    }
  {%- endstyle -%}

  {%- capture swiper_options -%}
    {
      "loop": false,
      "navigation": {
        "nextEl": ".swiper-button-next",
        "prevEl": ".swiper-button-prev"
      }
    }
  {%- endcapture -%}

  <script defer src="{{ 'product-form.js' | asset_url }}"></script>

  {%- liquid
    for option in product.options_with_values
      if option.name == "Color"
        assign selected_color = option.selected_value
      endif
    endfor
    for tag in product.tags
      if tag == 'women'
      endif
      if tag == 'men'
      endif
    endfor
    assign badges = ''
    for tag in product.tags
      if tag contains 'badge:'
        if badges == ''
          assign badges = tag | split: ':' | last
        else
          assign badges = badges | append: ',' | append: tag | split: ':' | last
        endif
      endif
    endfor
  -%}

  <div id="MainProduct" class="product product--{{ section.settings.media_size }} product--{{ section.settings.gallery_layout }} grid grid--1-col {% if product.media.size > 0 %}grid--2-col-tablet{% else %}product--no-media{% endif %}">
    <div class="grid__item product__media-wrapper">
      <a class="skip-to-content-link button visually-hidden" href="#ProductInfo-{{ section.id }}">
        {{ "accessibility.skip_to_product_info" | t }}
      </a>
      <div id="MediaGallery-{{ section.id }}" role="region" {% if section.settings.enable_sticky_info %}class="product__media-gallery"{% endif %} aria-label="{{ 'products.product.media.gallery_viewer' | t }}" data-desktop-layout="{{ section.settings.gallery_layout }}">
        {%- if product.media.size > 1 -%}
          <div id="GalleryThumbnails-{{ section.id }}" class="product-thumbnails">
            <ul id="Slider-Thumbnails-{{ section.id }}" class="list-unstyled">
              {%- for media in product.media -%}
                {%- liquid
                  capture media_index
                    if media.media_type == 'model'
                      increment model_index
                    elsif media.media_type == 'video' or media.media_type == 'external_video'
                      increment video_index
                    elsif media.media_type == 'image'
                      increment image_index
                    endif
                  endcapture
                  assign media_index = media_index | plus: 1
                -%}
                 <li id="Slide-Thumbnails-{{ section.id }}-{{ forloop.index }}" class="thumbnail-list__item" data-target="{{ section.id }}-{{ media.id }}"  data-media-position="{{ media_index }}" {% if media.alt != selected_color and product.options_by_name['Color'].values.size > 1 %}style="display: none;"{% endif %}>
                  {%- if media.media_type == 'model' -%}
                    <span class="thumbnail__badge" aria-hidden="true">
                      {%- render 'icon-3d-model' -%}
                    </span>
                  {%- elsif media.media_type == 'video' or media.media_type == 'external_video' -%}
                    <span class="thumbnail__badge" aria-hidden="true">
                      {%- render 'icon-play' -%}
                    </span>
                  {%- endif -%}
                  <button class="product__thumbnail"
                    type="button"
                    aria-label="{%- if media.media_type == 'image' -%}{{ 'products.product.media.load_image' | t: index: media_index }}{%- elsif media.media_type == 'model' -%}{{ 'products.product.media.load_model' | t: index: media_index }}{%- elsif media.media_type == 'video' or media.media_type == 'external_video' -%}{{ 'products.product.media.load_video' | t: index: media_index }}{%- endif -%}"

                    {% if forloop.first %}aria-current="true"{% endif %}
                    data-index="{{ forloop.index0 }}"
                  >
                   {% render 'image-element', image: media.preview_image %}
                  </button>
                </li>
              {%- endfor -%}
            </ul>
          </div>
        {%- endif -%}

        <div id="GalleryViewer-{{ section.id }}" class="product-main-images">
          <div id="Slider-Gallery-{{ section.id }}" class="product__media-list contains-media swiper" role="list" data-json='{{- swiper_options | replace: ' ', '' -}}'>
            <div class="swiper-wrapper">
              {%- liquid
                assign variant_images = product.images | where: 'attached_to_variant?', true | map: 'src'
                assign media_count = product.media.size
                if section.settings.hide_variants and media_count > 1
                  assign media_count = media_count | minus: variant_images.size | plus: 1
                endif
              -%}

              {%- for media in product.media -%}
                <div class="swiper-slide product__main-image {% if section.settings.enable_zoom %}product__image--zoom{% endif %}" data-filter="{{ media.alt }}" {% if media.alt != selected_color and product.options_by_name['Color'].values.size > 1 %}style="display: none;"{% endif %} {% if section.settings.enable_zoom %}data-bg="{{ media.preview_image | image_url: width: 2000 }}"{% endif %}>
                  {% case media.media_type %}
                    {% when 'image' %}
                      {% render 'image-element', image: media.preview_image %}
                    {% when 'video'%}
                      {% assign ratio =  1 | divided_by: media.preview_image.aspect_ratio | times: 100 %}
                      <div class="media" style="padding-top:{{ ratio }}%;">
                        {{ media | video_tag: autoplay: true, playsinline: true, loop: true, autoplay: true, muted: true }}
                      </div>
                  {% endcase %}
                </div>
              {%- endfor -%}
            </div>

            <div class="swiper-pagination"></div>
            <div class="swiper-button-prev"></div>
            <div class="swiper-button-next"></div>
          </div>
        </div>
      </div>
    </div>

    {%- assign product_form_id = 'product-form-' | append: section.id -%}

    <div class="product__info-wrapper grid__item{% if settings.page_width > 1400 and section.settings.media_size == "small" %} product__info-wrapper--extra-padding{% endif %}">
      <div id="ProductInfo-{{ section.id }}" class="product__info-container small-page-width small-text-center{% if section.settings.enable_sticky_info %} product__info-container--sticky{% endif %}">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
          {%- when '@app' -%}
            {% render block %}

          {%- when 'text' -%}
            <div class="product__text rte {% if block.settings.text_style == 'uppercase' %} caption-with-letter-spacing{% elsif block.settings.text_style == 'subtitle' %} subtitle{% endif %}" {{ block.shopify_attributes }}>
              {{ block.settings.text }}
            </div>

          {%- when 'title' -%}
            <div class="product__title" {{ block.shopify_attributes }}>
              <h1 class="h1">{{ product.title | escape | split: ' | ' | first }}</h1>
            </div>

            <div class="flex align-center">
              {% render 'okendo-reviews-product-rating-summary', product: product %}

              {% assign savings = 0 %}

              {% if product.compare_at_price > product.price %}
                {%- assign savings = product.compare_at_price | minus: product.price | times: 100.0 | divided_by: product.compare_at_price | round -%}

                {% if savings >= 30 %}
                  <div class="pdp-badge__final-sale badge badge--final-sale">
                    {{ 'products.product.final_sale' | t }}
                  </div>
                {% endif %}
              {% endif %}

              {% if badges != '' %}
                {% for badge in badges %}
                  <div class="pdp-badge__{{ badge.handle | handleize }} badge badge--{{ badge.handle | handleize }}">{{ badge }}</div>
                {% endfor %}
              {% endif %}
            </div>

          {%- when 'add_accessories' -%}
            {%- render "product-upsell" block: block -%}

          {%- when 'price' -%}
            <div class="no-js-hidden product__price-wrapper" id="price-{{ section.id }}" role="status" {{ block.shopify_attributes }}>
              {%- render 'price', product: product, use_variant: true, show_badges: false, price_class: 'price--large', show_final_sale_text: true -%}
            </div>

          {%- when 'payment_plans' %}
            {% comment %} Shop Pay {% endcomment %}
            <div class="payment-plan" {{ block.shopify_attributes }}>
              {%- assign product_form_installment_id = 'product-form-installment-' | append: section.id -%}

              {%- form 'product', product, id: product_form_installment_id, class: 'installment caption-large' -%}
                <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}" />

                {{ form | payment_terms }}
              {%- endform -%}
            </div>

            {%- if shop.taxes_included or shop.shipping_policy.body != blank -%}
              <div class="product__tax caption rte">
                {%- if shop.taxes_included -%}
                  {{ 'products.product.include_taxes' | t }}
                {%- endif -%}
                {%- if shop.shipping_policy.body != blank -%}
                  {{ 'products.product.shipping_policy_html' | t: link: shop.shipping_policy.url }}
                {%- endif -%}
              </div>
            {%- endif -%}

          {%- when 'custom_liquid' -%}
            {{ block.settings.custom_liquid }}

          {%- when 'collapsible_tab' -%}
            <div class="product__accordion accordion" {{ block.shopify_attributes }}>
              <details id="Details-{{ block.id }}-{{ section.id }}">
                <summary>
                  <div class="summary__title">
                    <h2 class="h4 accordion__title">
                      {{ block.settings.heading | default: block.settings.page.title }}
                    </h2>
                  </div>
                  {% render 'icon-caret' %}
                </summary>
                <div class="accordion__content rte" id="ProductAccordion-{{ block.id }}-{{ section.id }}">
                  {%- liquid
                    if block.settings.use_product_description
                      assign content = product.description | split: block.settings.product_description_split_value
                      assign content = content[block.settings.product_description_index]
                      echo content
                    endif
                  -%}
                  {{ block.settings.content }}
                  {{ block.settings.page.content }}
                </div>
              </details>
            </div>
          {%- when 'quantity_selector' -%}
            <div class="product-form__input product-form__quantity{% if settings.inputs_shadow_vertical_offset != 0 and settings.inputs_shadow_vertical_offset < 0 %} product-form__quantity-top{% endif %}" {{ block.shopify_attributes }}>
              <label class="form__label" for="Quantity-{{ section.id }}">
                {{ 'products.product.quantity.label' | t }}
              </label>

              <quantity-input class="quantity">
                <button class="quantity__button no-js-hidden" name="minus" type="button">
                  <span class="visually-hidden">{{ 'products.product.quantity.decrease' | t: product: product.title | escape }}</span>
                  {% render 'icon-minus' %}
                </button>
                <input class="quantity__input"
                    type="number"
                    name="quantity"
                    id="Quantity-{{ section.id }}"
                    min="1"
                    value="1"
                    form="{{ product_form_id }}"
                  >
                <button class="quantity__button no-js-hidden" name="plus" type="button">
                  <span class="visually-hidden">{{ 'products.product.quantity.increase' | t: product: product.title | escape }}</span>
                  {% render 'icon-plus' %}
                </button>
              </quantity-input>
            </div>

          {%- when 'popup' -%}
            <modal-opener class="product-popup-modal__opener no-js-hidden" data-modal="#PopupModal-{{ block.id }}" {{ block.shopify_attributes }}>
              <button id="ProductPopup-{{ block.id }}" class="product-popup-modal__button link" type="button" aria-haspopup="dialog">
                {{ block.settings.text | default: block.settings.page.title }}
              </button>
            </modal-opener>

            <a href="{{ block.settings.page.url }}" class="product-popup-modal__button link no-js">
              {{ block.settings.text }}
            </a>

          {%- when 'variant_picker' -%}
            {%- unless product.has_only_default_variant -%}
              {%- if block.settings.picker_type == 'button' -%}
                <variant-radios class="no-js-hidden" data-section="{{ section.id }}" data-url="{{ product.url }}" {{ block.shopify_attributes }}>
                  {%- for option in product.options_with_values -%}
                    <div class="product-form__option" data-option="{{ option.name }}" data-option-index="{{ forloop.index0 }}">
                      <fieldset class="js product-form__input">
                        <legend class="form__label">Select a {{ option.name }}: <span class="current-value">{{ option.selected_value }}</span></legend>
                        {%- for value in option.values -%}
                          {%- liquid
                            if option.name == 'Color'
                              assign swatch_url = value | handle | append: '.jpg' | file_img_url: '80x'
                            endif
                          -%}
                          <div class="product-form__radio-wrapper">
                            <input type="radio" id="{{ section.id }}-{{ option.position }}-{{ forloop.index0 }}"
                                  name="{{ option.name }}"
                                  value="{{ value | escape }}"
                                  form="{{ product_form_id }}"
                                  {% if option.selected_value == value %}checked{% endif %}
                            >
                            <label for="{{ section.id }}-{{ option.position }}-{{ forloop.index0 }}" {% if option.name == 'Color' %}style="background-image: url({{ swatch_url }});"{% endif %}>
                              <span {% if option.name == 'Color' %}class="visually-hidden"{% endif %}>
                                {{ value }}
                              </span>
                            </label>
                          </div>
                        {%- endfor -%}

                      </fieldset>
                    </div>
                  {%- endfor -%}

                  <script type="application/json">
                    {{ product.variants | json }}
                  </script>
                </variant-radios>
              {%- else -%}
                <variant-selects class="no-js-hidden" data-section="{{ section.id }}" data-url="{{ product.url }}" {{ block.shopify_attributes }}>
                  {% if product.metafields.other.colors != blank %}
                    {% assign color = product.title | split: ' | ' | last %}
                    {% assign style = product.title | split: ' iPhone' | first %}
                    {% capture style_color %}{{ style | handle }}-{{ color | handle }}{% endcapture %}

                    <div class="product-form__input product-form__input--radio product-form__input--color">
                      <label class="form__label" for="Option-{{ section.id }}-color">Color</label>
                      <div class="other-colors">
                        <a href="{{ product.url }}" class="other-color active">
                          <img loading="lazy" class="lazyload hs-lazyload hs-id-48ef2ae9" data-src="{{ product.featured_image | image_url: width: 40 }}" src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==" width="40" height="auto"/>
                          <span class="visually-hidden">{{ color }}</span>
                        </a>
                        {% for other_product in product.metafields.other.colors.value %}
                          <a href="{{ other_product.url }}" class="other-color">
                            <img loading="lazy" class="lazyload hs-lazyload hs-id-51a5cc7f" data-src="{{ other_product.featured_image | image_url: width: 40 }}" src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==" width="40" height="auto"/>
                            <span class="visually-hidden">{{ other_product.title }}</span>
                          </a>
                        {% endfor %}
                      </div>
                    </div>
                  {% endif %}

                  {%- for option in product.options_with_values -%}
                    {%- liquid
                      assign label = option.name

                      if option.name == "Size" and product.title contains "iPhone"
                        assign label = "Choose Size"
                      endif

                      assign only_one_option = false

                      if option.values.size == 1
                        unless product.title contains "iPhone"
                          assign only_one_option = true
                        endunless
                      endif
                    -%}

                    <div class="product-form__input product-form__input--dropdown" data-option-name="{{ option.name }}" data-option-index="{{ forloop.index0 }}">
                      <div class="select">
                        <label class="form__label" for="Option-{{ section.id }}-{{ forloop.index0 }}">
                          {{ label }}
                        </label>

                        <select id="Option-{{ section.id }}-{{ forloop.index0 }}"
                          class="select__select {% if only_one_option %}product-form__select--one-option{% endif %}"
                          name="options[{{ option.name | escape }}]"
                          form="{{ product_form_id }}"
                        >
                          {%- for value in option.values -%}
                            <option value="{{ value | escape }}" {% if option.selected_value == value %}selected="selected"{% endif %} {% if option.name == 'Size' %}data-phone-size="{{ product.title | split: 'iPhone' | last | remove: ' Case' | strip }}" data-url="{{ product.url }}"{% endif %}>
                              {{ value }}
                            </option>
                          {%- endfor -%}
                        </select>
                        {% if product.title contains 'Gift' %}
                          <script>
                            document.getElementById('Option-{{ section.id }}-{{ forloop.index0 }}').addEventListener('change', function() {

                            setTimeout(function() {
                                location.reload();
                            }, 500);
                            });
                        </script> 
                      {% endif %}
                        {%- unless only_one_option -%}
                          {% render 'icon-caret' %}
                        {%- endunless -%}
                      </div>

                      {% if option.name == 'Size' and product.title contains 'iPhone' %}
                        <modal-opener class="product-popup-modal__opener no-js-hidden" data-modal="#PopupModal-what-size">
                          <button id="ProductPopup-what-size" class="product-popup-modal__button link pdp-size-list__what-size" type="button" aria-haspopup="dialog">What size iPhone do I have?</button>
                        </modal-opener>
                      {% endif %}
                    </div>

                  {%- endfor -%}

                  <script type="application/json">
                    {{ product.variants | json }}
                  </script>
                </variant-selects>
              {%- endif -%}
            {%- endunless -%}

            <noscript class="product-form__noscript-wrapper-{{ section.id }}">
              <div class="product-form__input{% if product.has_only_default_variant %} hidden{% endif %}">
                <label class="form__label" for="Variants-{{ section.id }}">{{ 'products.product.product_variants' | t }}</label>
                <div class="select">
                  <select name="id" id="Variants-{{ section.id }}" class="select__select" form="{{ product_form_id }}">
                    {%- for variant in product.variants -%}
                      <option
                        {% if variant == product.selected_or_first_available_variant %}selected="selected"{% endif %}
                        {% if variant.available == false %}disabled{% endif %}
                        value="{{ variant.id }}"
                      >
                        {{ variant.title }}
                        {%- if variant.available == false %} - {{ 'products.product.sold_out' | t }}{% endif %}
                        - {{ variant.price | money | strip_html }}
                      </option>
                    {%- endfor -%}
                  </select>
                  {% render 'icon-caret' %}
                </div>
              </div>
            </noscript>
          {%- when 'buy_buttons' -%}
            <div class="product__buttons-wrapper" {{ block.shopify_attributes }}>

              <product-form class="product-form" {% if template == 'product.app-only' %}style="display: none;"{% endif %}>
                <div class="product-form__error-message-wrapper" role="alert" hidden>
                  <svg aria-hidden="true" focusable="false" role="presentation" class="icon icon-error" viewBox="0 0 13 13">
                    <circle cx="6.5" cy="6.50049" r="5.5" stroke="white" stroke-width="2"/>
                    <circle cx="6.5" cy="6.5" r="5.5" fill="#EB001B" stroke="#EB001B" stroke-width="0.7"/>
                    <path d="M5.87413 3.52832L5.97439 7.57216H7.02713L7.12739 3.52832H5.87413ZM6.50076 9.66091C6.88091 9.66091 7.18169 9.37267 7.18169 9.00504C7.18169 8.63742 6.88091 8.34917 6.50076 8.34917C6.12061 8.34917 5.81982 8.63742 5.81982 9.00504C5.81982 9.37267 6.12061 9.66091 6.50076 9.66091Z" fill="white"/>
                    <path d="M5.87413 3.17832H5.51535L5.52424 3.537L5.6245 7.58083L5.63296 7.92216H5.97439H7.02713H7.36856L7.37702 7.58083L7.47728 3.537L7.48617 3.17832H7.12739H5.87413ZM6.50076 10.0109C7.06121 10.0109 7.5317 9.57872 7.5317 9.00504C7.5317 8.43137 7.06121 7.99918 6.50076 7.99918C5.94031 7.99918 5.46982 8.43137 5.46982 9.00504C5.46982 9.57872 5.94031 10.0109 6.50076 10.0109Z" fill="white" stroke="#EB001B" stroke-width="0.7">
                  </svg>
                  <span class="product-form__error-message"></span>
                </div>

                {%- form 'product', product, id: product_form_id, class: 'form', novalidate: 'novalidate', data-type: 'add-to-cart-form' -%}
                  <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">

                  {% if product.compare_at_price > product.price and savings >= 30 %}
                    <input type="hidden" class="product__property" data-name="Item is" name="properties[Item is]" value="final sale" />
                  {% endif %}

                  <div class="product-form__buttons">
                    <button type="submit" name="add" class="product-form__submit button button--full-width button--primary" {% if product.selected_or_first_available_variant.available == false %}disabled{% endif %}>
                      <span>
                        {%- if product.selected_or_first_available_variant.available -%}
                          {{ 'products.product.add_to_cart' | t }}
                        {%- else -%}
                          {{ 'products.product.sold_out' | t }}
                        {%- endif -%}
                      </span>

                      <div class="loading-overlay__spinner hidden">
                        <svg aria-hidden="true" focusable="false" role="presentation" class="spinner" viewBox="0 0 66 66" xmlns="http://www.w3.org/2000/svg">
                          <circle class="path" fill="none" stroke-width="6" cx="33" cy="33" r="30"></circle>
                        </svg>
                      </div>
                    </button>

                    {%- if block.settings.show_dynamic_checkout -%}
                      {{ form | payment_button }}
                    {%- endif -%}
                  </div>
                {%- endform -%}

                {% if settings.enable_klaviyo_bis %}
                  <div class="klaviyo-bis__wrapper" style="display: none;" data-success-message="You're in! We'll let you know when it's back.">
                    <div class="flex klaviyo-bis__form">
                      <input type="email" name="klaviyo_email" class="klaviyo-bis__email" value="{% if customer and customer.email %}{{ customer.email }}{% endif %}" placeholder="Email">
                      <button type="button" class="button button-primary klaviyo-bis__submit">Notify me</button>
                    </div>
                    <div class="klaviyo-bis__response alert" style="display: none;"></div>
                  </div>
                {% endif %}
              </product-form>

              {% if customer %}
                <div  class="product-single__rewards">
                  <a href="/pages/rewards">{% render 'icon-rewards-tiny' %} Earn 8 WF points with this purchase</a>
                </div>
              {% endif %}
            </div>

          {%- when 'rating' -%}
            {%- if product.metafields.reviews.rating.value != blank -%}
              {% liquid
               assign rating_decimal = 0
               assign decimal = product.metafields.reviews.rating.value.rating | modulo: 1
               if decimal >= 0.3 and decimal <= 0.7
                assign rating_decimal = 0.5
              elsif decimal > 0.7
                assign rating_decimal = 1
               endif
              %}
              <div class="rating" role="img" aria-label="{{ 'accessibility.star_reviews_info' | t: rating_value: product.metafields.reviews.rating.value, rating_max: product.metafields.reviews.rating.value.scale_max }}">
                <span aria-hidden="true" class="rating-star color-icon-{{ settings.accent_icons }}" style="--rating: {{ product.metafields.reviews.rating.value.rating | floor }}; --rating-max: {{ product.metafields.reviews.rating.value.scale_max }}; --rating-decimal: {{ rating_decimal }};"></span>
              </div>
              <p class="rating-text caption">
