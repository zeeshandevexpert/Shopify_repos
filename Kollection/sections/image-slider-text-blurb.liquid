
<div class="slider-text-block">
    <div class="inner-column{% if section.settings.reverse %} reverse{% endif %}">
        <div class="column">
            <div class="product-slider">
                <div class="{% if section.settings.reverse %}slider-container-r reverse {% else %}slider-container{% endif %}">
                    {% for product in collections[section.settings.collection].products %}
                        <div class="slide">
                            <div class="featured-image">
                                <img src="{{ product.featured_image | img_url: '500x' }}" alt="Slider Image {{forloop.index0}}">
                            </div>
                            <div class="card_content">
                                    <h2 class="card_heading">{{ product.title }}</h2>
                                    {% render 'price', product: product, price_class: '', show_compare_at_price: true %}
                            </div>
                        </div>      
                    {% endfor %}
                </div>
                <div class="logo-slider">
                    {% for block in section.blocks %}
                        <div class="title"> {{ block.settings.slide_heading }}</div>   
                    {% endfor %}
                </div>
            </div>
        </div>
        <div class="content-column">
            <div class="content">
                <h2 class="heading">{{ section.settings.heading }}</h2>
                <div class="description">
                    {{ section.settings.description }}
                </div>
                <a href="{{ section.settings.button_link }}" class="button-m">{{ section.settings.button_label }}</a>
            </div>
        </div>
    </div>
</div>


{% schema %}
    {
      "name": "Slick Slider",
      "settings": [
        {
        "type": "checkbox",
        "id": "reverse",
        "label": "Column Reverse",
        "default": false
        },
        {
        "type": "collection",
        "id": "collection",
        "label": "Collection"
        },
        {
            "type": "text",
            "id": "heading",
            "label": "heading"
        },
        {
            "type": "richtext",
            "id": "description",
            "label": "Description"
        },
        {
            "type": "text",
            "id": "button_label",
            "default": "Learn More",
            "label": "Button Label"
        },
        {
            "type": "url",
            "id": "button_link",
            "label": "Button Link"
        }
      ],
      "blocks": [
                {
                "type": "slide",
                "name": "Slide",
                "settings": [
                    {
                    "type": "text",
                    "id": "slide_heading",
                    "label": "Title"
                    }
                ]
                }
            ],
      "presets": [
        {
          "name": "Slick Slider",
          "category": "Custom"
        }
      ]
    }
    {% endschema %}
    