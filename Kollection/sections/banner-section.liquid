<section class="banner-block" style="background-image: url({{ section.settings.bg_image |  img_url: 'master' }});">
    <div class="wrap-banner-block">
        <div class="item">
    {%- for block in section.blocks -%}
        {%- case block.type -%}
        {%- when 'text' -%}
            <span class="sub-heading">{{ block.settings.sub_heading }}</span>
        {%- when 'heading' -%}
            <div class="heading">{{ block.settings.heading }}</div>
          {%- when 'buttons' -%}
                <a class="button-bn" href="{{ block.settings.button_link }}"> {{ block.settings.button_label }}</a>  
        {%- endcase -%}
      {%- endfor -%}
    
        </div>
    </div>
</section>


{% schema %}
{
    "name": "Banner Block",
    "settings": [
        {
            "type": "image_picker",
            "id": "bg_image",
            "label": "Background Image"
        }
       
        ],
            "blocks": [
                {
                "type": "heading",
                "name": "Heading",
                "limit": 1,
                "settings": [
                    {
                        "type": "richtext",
                        "id": "heading",
                        "label": "Heading"
                    }
                ]
                },
                {
                "type": "text",
                "name": "Sub Heading",
                "limit": 1,
                "settings": [
                    {
                        "type": "text",
                        "id": "sub_heading",
                        "label": "Sub Heading"
                    }
                ]
                },
                {
                "type": "buttons",
                "name": "Button",
                "limit": 1,
                "settings": [
                    {
                    "type": "text",
                    "id": "button_label",
                    "default": "Learn More",
                    "label": "Button Label"
                    },
                    {
                    "type": "url",
                    "id": "button_link",
                    "label": "Button Link"
                    }
                ]
                }
            ],
        "presets": [
            {
                "name": "Banner Block"
            }
        ]
}
{% endschema %}