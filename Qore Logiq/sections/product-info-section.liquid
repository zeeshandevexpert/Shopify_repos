<section class="product_info{% if section.settings.reverse %} reverse{% endif %}">
    <div class="image">
       
        <img src="{{ section.settings.image |  img_url: 'master' }}" alt="" />
    </div>
    <div class="content">
        <div class="title">{{ section.settings.heading }}</div>
        <hr />
        <div class="sub-title">{{ section.settings.sub_heading }}</div>
        {% if section.settings.text != blank %}
            <div class="text">{{ section.settings.text }}</div>    
        {% endif %}
        <div class="icons">
            {% for block in section.blocks %}
                <div class="item">
                    {% if block.settings.icon %}
                    <div class="icon">
                      <img src="{{ block.settings.icon | img_url: "master" }}" alt=""> 
                    </div>
                {% endif %}
                    <div class="icon-content">
                        <div class="icon-title">
                            {{ block.settings.heading }}
                        </div>
                        <div class="icon-desc">
                          {{ block.settings.text }}
                        </div>
                    </div>
                </div>        
            {% endfor %}
        </div>
        <a href="{{ section.settings.btn_url }}" class="global_button">{{ section.settings.btn_text }}</a>
    </div>
</section>



{% schema %}
    {
        "name": "Product Info Block",
        "settings": [

            {
                "type": "checkbox",
                "id": "reverse",
                "label": "Reverse Column"
                },
               
            {
                "type": "image_picker",
                "id": "image",
                "label": "Image"
                },
               
                {
                "type": "text",
                "id": "heading",
                "label": "Heading"
                },
                {
                "type": "textarea",
                "id": "sub_heading",
                "label": "Sub Heading"
                },
                {
                "type": "text",
                "id": "text",
                "label": "Text"
                },
                {
                "type": "text",
                "id": "btn_text",
                "label": "Button Text"
                },
                {
                "type": "url",
                "id": "btn_url",
                "label": " Button Link"
                }
               
            ],
            "blocks": [
            {
            "name": "Icon",
            "type": "icon",
            "settings":[
                    {
                    "type": "image_picker",
                    "id": "icon",
                    "label": "Icon"
                    },
                    {
                    "type": "text",
                    "id": "heading",
                    "label": "Heading"
                    },
                    {
                    "type": "text",
                    "id": "text",
                    "label": "Text"
                    }
                   
                ]
            }
        ],
            "presets": [
                {
                    "name": "Product Info Block"
                }
            ]
    }
    {% endschema %}