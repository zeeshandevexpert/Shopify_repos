<section class="gallery-block">
    <div class="wrap-gallery-block">
        <div class="image-wrapper">
            {% for block in section.blocks %}
                <div class="image-box">
                    <img src="{{ block.settings.image | img_url: 'master' }}" alt="">
                </div>
            {% endfor %}
        </div>
    </div>
</section>



{% schema %}
{
  "name": "Gallery Block",
  "settings": [
  
  ],

  "blocks": [
    {
        "type": "image",
        "name": "Image",
        "settings": [
            {
                "type": "image_picker",
                "id": "image",
                "label": "image"
              }
        ]
    },
  ],
  
  "presets": [
    {
      "name": "Gallery Block",
    }
  ]
}
{% endschema %}