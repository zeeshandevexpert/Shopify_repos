<section class="image-text-block">
    <div class="wrap-image-text">
        <div class="image-column">
            <img src="{{  section.settings.image | img_url: 'master' }}" alt="">

        </div>
        <div class="content-column">
            <h2 class="heading">
                {{  section.settings.heading }}
            </h2>
            <div class="text">
                {{  section.settings.text }}
            </div>
        </div>
    </div>
</section>


{% schema %}
{
  "name": "Image With Text Block",
  "settings": [

    {
      "type": "image_picker",
      "id": "image",
      "label": "image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Text"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text"
    }
   
  ],
  
  "presets": [
    {
      "name": "Image With Text Block",
    }
  ]
}
{% endschema %}