<footer>
    <div class="footer-top">
        <div class="footer-top-container">
            <div class="footer-top-lc">
                <div class="footer-logo">
                    <a href="/">
                        <img src="{{ section.settings.logo |  img_url: 'master' }}" alt="">
                    </a>
                </div>
                <div class="footer-subtext">
                    <p>{{ section.settings.description }}</p>
                </div>
            </div>
            <div class="footer-top-rc-w">
              <a class="download_pdf" href="{{ section.settings.pdf_link }}" download>{{ section.settings.pdf_text }}</a>
              <div class="footer-top-rc">
                <p>{{ section.settings.icon-title }}</p>
                <div class="social-icons">
                {% for block in section.blocks %}
                    <a href="{{ block.settings.social_link }}">
                        <img src="{{ block.settings.icon |  img_url: 'master' }}" alt="">
                    </a>                    
                {% endfor %}
                </div>
                </div>
            </div>
        </div>

    </div>
    <div class="footer-bottom">
        <div class="footer-bottom-container">
            <div class="footer-bottom-lc">
                <p>{{ section.settings.copyright }}</p>
            </div>
            <div class="footer-bottom-rc">
                <a href="{{ section.settings.link }}">{{ section.settings.text }}</a>
            </div>
        </div>
    </div>
</footer>



{% schema %}
    {
      "name": "Footer Block",
      "settings": [
        {
              "type": "image_picker",
              "id": "logo",
              "label": "Logo"
            },
        {
            "type": "richtext",
            "id": "description",
            "label": "Description"
        },
        {
            "type": "text",
            "id": "icon-title",
            "label": "Icon Title"
        },
        {
            "type": "text",
            "id": "pdf_text",
            "label": "PDF Text Title"
        },
        {
            "type": "url",
            "id": "pdf_link",
            "label": "Pdf Download Link"
        },
            {
              "type": "text",
              "id": "text",
              "label": "Text"
            },
            {
              "type": "url",
              "id": "link",
              "label": "text Link"
            },
            {
              "type": "text",
              "id": "copyright",
              "label": "Copyright Text"
            }
      ],
      "blocks": [
        {
          "name": "Social Icon",
          "type": "icon",
          "settings":[
            {
              "type": "image_picker",
              "id": "icon",
              "label": "Icon"
            },
            {
              "type": "url",
              "id": "social_link",
              "label": "Icon Link"
            }
          
          ]
        }
      ],
      "presets": [
        {
            "name": "Footer Block"
        }
      ]
    }
    {% endschema %}
