<div class="implement-block">
    <div class="wrap-implement-block">
        <h2 class="heading">{{ section.settings.heading }}</h2>
        <p class="sub-heading">{{ section.settings.sub_heading }}</p>

        <div class="animation-block">
            {% comment %} <img src="{{ section.settings.image | img_url: 'master' }}" alt=""> {% endcomment %}

            {% include "implementation-video" %}
        </div>



    </div>
</div>




{% schema %}
    {
      "name": "Implementation Block",
      "tag": "section",
      "class": "implementation-section",
      "settings": [
            {
              "type": "text",
              "id": "heading",
              "label": "Heading"
            },
            {
              "type": "textarea",
              "id": "sub_heading",
              "label": "Sub Heading"
            },
            {
              "type": "header",
              "content": "Media Block"
            },
            {
              "type": "select",
              "id": "media_type",
              "label": "Media Type",
              "options": [
                {
                  "value": "image",
                  "label": "image"
                },
                {
                  "value": "vimeo_youtube_video",
                  "label": "YouTube or Vimeo Video"
                },
                {
                  "value": "video_file",
                  "label": "HTML5 Video"
                }
              ],
              "default": "image"
            },
            {
              "type": "image_picker",
              "id": "image_normal",
              "label": "Image"
            },
            {
              "type": "image_picker",
              "id": "image_mobile",
              "label": "Image Mobile"
            },
            {
              "type": "video_url",
              "id": "vimeo_youtube_video",
              "label": "YouTube or Vimeo Video",
              "accept": [
                "youtube",
                "vimeo"
              ]
            },
            {
              "type": "text",
              "id": "video_file",
              "label": "HTML5 Video File URL"
            }
      ],
     
      "presets": [
        {
          "name": "Implementation Animation Block"
        }
      ]
    }
    {% endschema %}