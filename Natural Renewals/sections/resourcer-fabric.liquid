
    <div class="container-style container-medium">
        <div class="resources-index-row">
            <div class="resources-index-col-left">
                <div class="standard-cover">
                    {% include "media-block" %}
                </div>
            </div>
            <div class="resources-index-col-right">
                <div class="resources-index-top">
                    <h2>{{ section.settings.title }}</h2>
                    <p>{{ section.settings.description }}</p>
                </div>
                <div class="resources-index-mobile-only">
                    <div class="standard-cover">
                        {% include "media-block" %}
                    </div>
                </div>
                <div class="resources-index-bottom">
                    {% for block in section.blocks %}
                        <div class="resources-index-info-row">
                            <div class="resources-index-info-col-left">
                                <span>{{ block.settings.title }}</span>
                                <a target="_blank" href="{{ block.settings.link }}">{{ block.settings.description }}</a>
                            </div>
                            <div class="resources-index-info-col-right">
                                {% if block.settings.point_1 != blank %}<span>{{ block.settings.point_1 }}</span>{% endif %}
                                {% if block.settings.point_2 != blank %}<span>{{ block.settings.point_2 }}</span>{% endif %}
                                {% if block.settings.point_3 != blank %}<span>{{ block.settings.point_3 }}</span>{% endif %}
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>


{% schema %}
{
  "name": "Resources - Fabric",
  "tag": "section",
  "class": "resources-index-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "header",
      "content": "Media Block"
    },
    {
      "type": "select",
      "id": "media_type",
      "label": "Media Type",
      "options": [
        {
          "value": "image",
          "label": "image"
        },
        {
          "value": "vimeo_youtube_video",
          "label": "YouTube or Vimeo Video"
        },
        {
          "value": "video_file",
          "label": "HTML5 Video"
        }
      ],
      "default": "image"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "video_url",
      "id": "vimeo_youtube_video",
      "label": "YouTube or Vimeo Video",
      "accept": [
        "youtube",
        "vimeo"
      ]
    },
    {
      "type": "text",
      "id": "video_file",
      "label": "HTML5 Video File URL"
    }
  ],
  "blocks": [
    {
      "name": "Point",
      "type": "point",
      "settings":[
        {
          "type": "text",
          "id": "title",
          "label": "Year"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        },
        {
          "type": "text",
          "id": "point_1",
          "label": "Point 1"
        },
        {
          "type": "text",
          "id": "point_2",
          "label": "Point 2"
        },
        {
          "type": "text",
          "id": "point_3",
          "label": "Point 3"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Resources - Fabric"
    }
  ]
}
{% endschema %}