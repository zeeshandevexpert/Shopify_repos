
    <div class="container-style container-large">
        <h3>{{ section.settings.title }} <a href="javascript:void(0)" id="load-all-photo">load all</a></h3>
        <div class="press-article-row">
            {% assign counter = 1 %}
            {% for block in section.blocks %}
                <div class="press-article-col photo-section" {% if counter>3 %}style="display: none" {% endif %}>
                    <a href="{{ block.settings.link }}" class="img-holder">
                        <img src="{{ block.settings.image | img_url: '10x' }}"
                             class="lazyload"
                             data-src="{{ block.settings.image | img_url: '400x' }}"
                             data-widths="[400]"
                             data-sizes="auto"
                             tabindex="-1"
                        />
                    </a>
                    <div class="press-article-download">
                        <a href="{{ block.settings.link }}" target="_blank">download</a>
                    </div>
                </div>
                {% assign counter = counter | plus: 1 %}
            {% endfor %}
        </div>
    </div>

{% schema %}
{
  "name": "Press - Photography",
  "tag": "section",
  "class": "press-article-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Download Link"
    }
  ],
  "blocks": [
    {
      "name": "item",
      "type": "item",
      "settings":[
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Press - Photography"
    }
  ]
}
{% endschema %}