
    <div class="standard-cover">
      {% include "media-block" %}
    </div>
    <div class="lab-top-content">
        <h2>{{ section.settings.title }}</h2>
        <div class="lab-top-content-align">
            {{ section.settings.description }}
            <a href="{{ section.settings.button_link }}">{{ section.settings.button_title }}</a>
        </div>
    </div>

{% schema %}
{
  "name": "Experiments - Head",
  "tag": "section",
  "class": "lab-top-section",
  "settings": [
    {
      "type": "textarea",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "text",
      "id": "button_title",
      "label": "Link Title"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Link"
    },
    {
      "type": "header",
      "content": "Media Block"
    },
    {
      "type": "select",
      "id": "media_type",
      "label": "Media Type",
      "options": [
        {
          "value": "image",
          "label": "image"
        },
        {
          "value": "vimeo_youtube_video",
          "label": "YouTube or Vimeo Video"
        },
        {
          "value": "video_file",
          "label": "HTML5 Video"
        }
      ],
      "default": "image"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "video_url",
      "id": "vimeo_youtube_video",
      "label": "YouTube or Vimeo Video",
      "accept": [
        "youtube",
        "vimeo"
      ]
    },
    {
      "type": "text",
      "id": "video_file",
      "label": "HTML5 Video File URL"
    }
  ],
  "presets": [
    {
      "name": "Experiments - Head"
    }
  ]
}
{% endschema %}