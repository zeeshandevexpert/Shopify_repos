<div class="home-vintage-desktop-only">
  <div class="standard-cover">
    {% include 'media-block' %}
  </div>
</div>
<div class="home-vintage-mobile-only">
  <div class="standard-cover">
    {% include 'media-block', mobile: 1 %}
  </div>
</div>

{% comment %}
  <div id="newsletter" class="newsletter-content-wrap">
      <h2>{{ section.settings.footer_title }} <div class="close-icon" onclick="closeDiv()"><img src="{{ " close-icon.svg"
                  | asset_url }}" /></div>
      </h2>
      {{ section.settings.email_subscribe_code }}
  </div>
{% endcomment %}

<div class="container-style banner-video-container">
  <div class="video-banner-row">
    <div class="video-banner-col">
      <h2
        {% if section.settings.text_color %}
          style="color:{{ section.settings.text_color }}"
        {% endif %}
      >
        {{ section.settings.title }}
      </h2>
      {% if section.settings.icon %}
        <img class="icon" src="{{ section.settings.icon |  img_url: 'master' }}" alt="">
      {% endif %}

      <p {% if section.settings.text_color %}
        style="color:{{ section.settings.text_color }}"
      {% endif %}>{{ section.settings.text }}</p>

      {% comment %} <a
        href="{{ section.settings.button_link }}"
        {% if section.settings.text_color %}
          style="color:{{ section.settings.text_color }}"
        {% endif %}
      >
        {{- section.settings.button_title -}}
      </a> {% endcomment %}
    </div>
  </div>

  <div class="description-col" {% if section.settings.text_color %}
    style="color:{{ section.settings.text_color }}"
  {% endif %}>
    {{ section.settings.description }}
  </div>

</div>

{% comment %} <div class="section-arrow-row">
  <img src="{{ " section-arrow.svg" | asset_url }}">
</div> {% endcomment %}



{% schema %}
{
  "name": "Banner Video",
  "tag": "section",
  "class": "video-banner-section",
  "settings": [
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color"
    },
    {
      "type": "textarea",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "image_picker",
      "id": "icon",
      "label": "Icon"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Text"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description"
    },
   
    {
      "type": "header",
      "content": "Media Block"
    },
    {
      "type": "select",
      "id": "media_type",
      "label": "Media Type",
      "options": [
        {
          "value": "image",
          "label": "image"
        },
        {
          "value": "vimeo_youtube_video",
          "label": "YouTube or Vimeo Video"
        },
        {
          "value": "video_file",
          "label": "HTML5 Video"
        }
      ],
      "default": "image"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Image Mobile"
    },
    {
      "type": "video_url",
      "id": "vimeo_youtube_video",
      "label": "YouTube or Vimeo Video",
      "accept": ["youtube", "vimeo"]
    },
    {
      "type": "text",
      "id": "video_file",
      "label": "HTML5 Video File URL"
    }
  ],
  "presets": [
    {
      "name": "Banner Video"
    }
  ]
}
{% endschema %}
