<div class="past-present-future">
    <div class="steps-container">
        <h2 class="heading">{{ section.settings.heading }}</h2>
        <div class="steps-row">
            {% for block in section.blocks %}
                <div class="step-block">
                    <div class="image">

                    {% comment %} <div class="home-process-desktop-only">
                      <div class="standard-cover">
                        {% include "loop-media-block" %}
                      </div>
                    </div>
                    <div class="home-process-mobile-only">
                        <div class="standard-cover">
                          {% include "loop-media-block", mobile: 1 %}
                        </div>
                    </div> {% endcomment %}
                    {% include "loop-media-block" %}
                      {% comment %} <img src="{{ block.settings.image | img_url: 'master' }}" alt=""> {% endcomment %}
                      <div class="description-block">
                           <div class="text">{{ block.settings.description }}</div>
                        </div>    
                    </div>
                    <div class="title">{{ block.settings.title }}</div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>


{% schema %}
    {
      "name": "Past Present Future Block",
      "tag": "section",
      "class": "past-present-future-section",
      "settings": [
        {
          "type": "textarea",
          "id": "heading",
          "label": "Main Heading"
        }
      ],
      "blocks": [
        {
          "name": "Item",
          "type": "item",
          "settings":[
            {
              "type": "header",
              "content": "Media Block"
            },
            {
              "type": "select",
              "id": "media_type",
              "label": "Media Type",
              "options": [
                {
                  "value": "image",
                  "label": "image"
                },
                {
                  "value": "vimeo_youtube_video",
                  "label": "YouTube or Vimeo Video"
                },
                {
                  "value": "video_file",
                  "label": "HTML5 Video"
                }
              ],
              "default": "image"
            },
            {
              "type": "image_picker",
              "id": "image_normal",
              "label": "Image"
            },
            {
              "type": "image_picker",
              "id": "image_mobile",
              "label": "Image Mobile"
            },
            {
              "type": "video_url",
              "id": "vimeo_youtube_video",
              "label": "YouTube or Vimeo Video",
              "accept": [
                "youtube",
                "vimeo"
              ]
            },
            {
              "type": "text",
              "id": "video_file",
              "label": "HTML5 Video File URL"
            },
            {
              "type": "text",
              "id": "title",
              "label": "Title"
            },
            {
              "type": "textarea",
              "id": "description",
              "label": "Description"
            }
           
          ]
        }
      ],
      "presets": [
        {
          "name": "Past Present Future Block"
        }
      ]
    }
    {% endschema %}