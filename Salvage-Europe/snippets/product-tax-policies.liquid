{% comment %}
snippets/product-tax-policies.liquid

Usage:

{%
  render 'product-tax-policies',
  product: product
%}

{% endcomment %}
{% unless product == empty %}
  {%- if shop.taxes_included or shop.shipping_policy.body != blank -%}
    <div class="product__policies caption rte">
      {%- if shop.taxes_included -%}
        {{ 'products.product.include_taxes' | t }}
      {%- endif -%}
      {%- if shop.shipping_policy.body != blank -%}
        {{ 'products.product.shipping_policy_html' | t: link: shop.shipping_policy.url }}
      {%- endif -%}
    </div>
  {%- endif -%}
{% else %}
  <div class="product__policies product__policies--test-mode caption rte">
    {{ 'products.product.include_taxes' | t }}
    {{ 'products.product.shipping_policy_html' | t: link: '#' }}
  </div>
{% endunless %}
