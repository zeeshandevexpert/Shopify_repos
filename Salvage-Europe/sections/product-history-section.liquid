<div class="history-block">
    <div class="wrap-history-block">
        
          <div class="w-layout-grid">
            {% if section.settings.image !=blank %}
            <div class="image-block">
                <img src="{{ section.settings.image |img_url: 'master' }}" loading="lazy" alt="">
            </div>     
            {% endif %}
           
            <div class="content-block">
              <div class="heading-block">
                <h1>{{section.settings.heading}}</h1>
              </div>
              <div class="content">
                {{ section.settings.content }}
              </div>
              </div>
            </div>
          
    </div>
</div>



{% schema %}
    {
       "name": "Our History Block",
      "settings": [
            {
              "type": "image_picker",
              "id": "image",
              "label": "Main Image"
          },     
         {
              "type": "text",
              "id": "heading",
              "label": "Heading"
          },
            {
              "type": "richtext",
              "id": "content",
              "label": "Text Color"
          }
      ],
    "presets": [
     {
       "name": "Our History Block",
       "settings": {
         
        },
       "blocks": [
       
       ]
     }
   ]
    }
    {% endschema %}