<section class="banner-image">
    <div class="wrap-banner-image">
        <div class="image-block">
            <img src="{{ section.settings.image |  img_url: 'master' }}" alt="">
        </div>
        <div class="content-block">
            <div class="heading">
                {{ section.settings.heading }}
            </div>
            <div class="content">
                {{ section.settings.content }}
            </div>
        </div>
    </div>
</section>



