{% if section.settings.heading != blank %}
    
<div class="container accordian-block">
    <div class="inner">
        <div class="wrap_left">
            <h2 class="heading">{{ section.settings.heading }}</h2>
            <div class="sub-text">{{ section.settings.main_text }}</div>
        </div> 
        <div class="wrap_right">
                {% if section.settings.title1 != blank %}
                    <div class="faq-div">
                        <a href="#" class="togglefaq"><h3>{{ section.settings.title1 }}</h3> <img src="{{ 'arrow.png' | asset_url }}" alt=""></a>
                        <div class="faqanswer">
                            {{ section.settings.text1 }}
                        </div>
                    </div>         
                {% endif %}
                {% if section.settings.title2 != blank %}
