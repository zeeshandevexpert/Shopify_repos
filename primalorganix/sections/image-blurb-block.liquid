<section class="image-blurb-block" style="background-image: url({{ section.settings.bg_image |  img_url: 'master' }});">
<div class="wrap-image-blurb">
    <div class="content-block">
        <div class="content">
            <h2 class="sup-title">{{ section.settings.sup_title }}</h2>
            <h2 class="title">{{ section.settings.heading }}</h2>
            <div class="description">
              {{ section.settings.description }}
            </div>
            <a href="{{ section.settings.btn_link }}"><button class="button-label" style="background-image: url({{ 'button-bg.png' |  asset_url }});">{{ section.settings.btn_text }}</button></a>
        </div>
    </div>
    <div class="image-block">
        <div class="image">
            <img src="{{ section.settings.image |  img_url: 'master' }}" alt="">
        </div>
    </div>
</div>
</section>

{% schema %}
    {
        "name": "Image Blurb Block",
        "settings": [
            {
                "type": "image_picker",
                "id": "bg_image",
                "label": "Background Image"
            },
            {
                "type": "text",
                "id": "sup_title",
                "label": "Sup Text"
            },
            {
                "type": "text",
                "id": "heading",
                "label": "Heading"
            },
            
            {
                "type": "text",
                "id": "text",
                "label": "Text"
            },
            {
                "type": "richtext",
                "id": "description",
                "label": "Description"
            },
            {
                "type": "url",
                "id": "btn_link",
                "label": "Button Link"
            },
            {
                "type": "text",
                "id": "btn_text",
                "label": "Button Text"
            },
            {
                "type": "image_picker",
                "id": "image",
                "label": "Product Image"
            },
            ],
            "presets": [
                {
                    "name": "Image Blurb Block"
                }
            ]
    }
    {% endschema %}