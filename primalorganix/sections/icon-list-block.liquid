<section class="icon-list">
        <div class="wrap-icon-list">
            <h2 class="heading">{{ section.settings.heading }}</h2>
            <div class="icon-box-wrapper">
                {% for block in section.blocks %}
                    <div class="icon-box">
                        <div class="icon">
                            <img src="{{ block.settings.icon |  img_url: 'master' }}" alt="">
                        </div>
                        <div class="title">{{ block.settings.title }}</div>
                    </div>      
                {% endfor %}
              
              
            </div>
        </div>
    </section> 

    {% schema %}
        {
            "name": "Icon List Block",
            "settings": [
                
                    {
                        "type": "text",
                        "id": "heading",
                        "label": "Heading"
                    }
                ],
                "blocks": [
                        {
                        "type": "Icons",
                        "name": "Icons",
                        "settings": [
                            {
                                "type": "image_picker",
                                "id": "icon",
                                "label": "Icon"
                            },
                            {
                                "type": "text",
                                "id": "title",
                                "label": "Title"
                            }
                        ]
                        }
                    ],
                    "presets": [
                        {
                            "name": "Icon List Block"
                        }
                    ]
        }
        {% endschema %}