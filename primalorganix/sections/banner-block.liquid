<section class="banner-block" style="background-image: url({{ section.settings.bg_image |  img_url: 'master' }});">
        <div class="wrap-banner-block">
            <div class="image-block">
                <img src="{{ section.settings.image |  img_url: 'master' }}" alt="">
            </div>
            <div class="content-block">
                <div class="content">
                    <h2 class="heading"> {{ section.settings.heading }} </h2>
                    <div class="label-text" style="background-image: url({{ 'button-bg.png' |  asset_url }});">{{ section.settings.labeltext }}</div>
                    <div class="text">{{ section.settings.text }}</div>
                    <div class="description-list">
                     {{ section.settings.description }}
                    </div>
                    <a href="{{ section.settings.btn_link }}"><button class="button-label" style="background-image: url({{ 'button-bg.png' |  asset_url }});">{{ section.settings.btn_text }}</button></a>
                </div>
            </div>
        </div>
    </section> 

    {% schema %}
        {
            "name": "Banner Block",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "bg_image",
                    "label": "Background Image"
                },
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Product Image"
                },
                {
                    "type": "text",
                    "id": "heading",
                    "label": "Heading"
                },
                {
                    "type": "text",
                    "id": "labeltext",
                    "label": "Label Text"
                },
                {
                    "type": "text",
                    "id": "text",
                    "label": "Text"
                },
                {
                    "type": "richtext",
                    "id": "description",
                    "label": "Description"
                },
                {
                    "type": "url",
                    "id": "btn_link",
                    "label": "Button Link"
                },
                {
                    "type": "text",
                    "id": "btn_text",
                    "label": "Button Text"
                }
                
                ],
                "presets": [
                    {
                        "name": "Banner Block"
                    }
                ]
        }
        {% endschema %}