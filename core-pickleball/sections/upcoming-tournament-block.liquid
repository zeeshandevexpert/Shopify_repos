{
    "name": "Tournament Block",
    "settings": [
            {
                "type": "text",
                "id": "heading",
                "label": "Heading"
            },
            {
                "type": "text",
                "id": "btn_text",
                "label": "Button Text"
            },
            {
                "type": "url",
                "id": "btn_link",
                "label": "Button Link"
            },
            {
            "type": "collection",
            "id": "collection",
            "label": "Collection"
            }
        ],
        "blocks": [
                {
                "type": "Item",
                "name": "Slide",
                "settings": [
                    {
                        "type": "image_picker",
                        "id": "image",
                        "label": "Image"
                    },
                    {
                        "type": "text",
                        "id": "heading",
                        "label": "Heading"
                    },
                    {
                        "type": "text",
                        "id": "date",
                        "label": "Date"
                    }
                ]
                }
            ],
        
        "presets": [
            {
                "name": "Tournament Block"
            }
        ]
}
{% endschema %} 