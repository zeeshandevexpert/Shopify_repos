<section>
  <h1>{{ page.title }}</h1>
  
  <div class="content-part">
    <img class="lazyload chemical-image" data-src="{{ section.settings.chemical_image | img_url: '130x' }}" />
    <div class="text-part text-right">
      <p>{{ section.settings.text1 }}</p>
      <p>{{ section.settings.text2 }}</p>
    </div>
    <div class="img-part">
      <img class="lazyload" data-src="{{ section.settings.image | img_url: '400x' }}" />
    </div>
    <div class="text-part text-left">
      <p>{{ section.settings.text3 }}</p>
      <p>{{ section.settings.text4 }}</p>
    </div>
  </div>
  
  <div class="icon-blocks">
    {% for block in section.blocks %}
    <div class="icon-item">
      <img class="lazyload" data-src="{{ block.settings.image | img_url: '85x' }}" />
      <p>{{ block.settings.icon_title }}</p>
    </div>
    {% endfor %}
  </div>
  
</section>

{% schema %}
  {
    "name": "Core Tech Section",
	"class": "core-tech-section",
    "settings": [
		{
			"type"  :  "image_picker",
			"id"    :  "chemical_image",
			"label" :  "Chemical Image"
		},
		{
			"type"  :  "text",
			"id"    :  "text1",
			"label" :  "Image text1"
		},
		{
			"type"  :  "text",
			"id"    :  "text2",
			"label" :  "Image text2"
		},
		{
			"type"  :  "text",
			"id"    :  "text3",
			"label" :  "Image text3"
		},
		{
			"type"  :  "text",
			"id"    :  "text4",
			"label" :  "Image text4"
		},
		{
			"type"  :  "image_picker",
			"id"    :  "image",
			"label" :  "Main Image"
		}
	],
	"blocks": [
		{
			"type"  :  "icon",
			"name"  :  "Icon",
			"settings":[
				{
					"type"  :  "image_picker",
					"id"    :  "image",
					"label" :  "Image"
				},
				{
					"type"  :  "text",
					"id"    :  "icon_title",
					"label" :  "Icon Title"
				}
			]
		}
	]
  }
{% endschema %}

