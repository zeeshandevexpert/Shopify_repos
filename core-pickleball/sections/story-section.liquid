<section>
  <h2 class="title">{{ section.settings.title }}</h2>
  {{ section.settings.text1 }}
  <div class="img-part">
    <img class="lazyload" data-src="{{ section.settings.image | img_url: '800x' }}" />
  </div>
  {{ section.settings.text2 }}
  
  <img class="lazyload story-back-img img1" data-src="//cdn.shopify.com/s/files/1/0404/4773/8021/files/story-back-icon.png?v=1617646448" />
  <img class="lazyload story-back-img img2" data-src="//cdn.shopify.com/s/files/1/0404/4773/8021/files/story-back-icon.png?v=1617646448" />
  <img class="lazyload story-back-img img3" data-src="//cdn.shopify.com/s/files/1/0404/4773/8021/files/story-back-icon.png?v=1617646448" />
  <img class="lazyload story-back-img img4" data-src="//cdn.shopify.com/s/files/1/0404/4773/8021/files/story-back-icon.png?v=1617646448" />
  <img class="lazyload story-back-img img5" data-src="//cdn.shopify.com/s/files/1/0404/4773/8021/files/story-back-icon.png?v=1617646448" />
  <img class="lazyload story-back-img img6" data-src="//cdn.shopify.com/s/files/1/0404/4773/8021/files/story-back-icon.png?v=1617646448" />
  <img class="lazyload story-back-img img7" data-src="//cdn.shopify.com/s/files/1/0404/4773/8021/files/story-back-icon.png?v=1617646448" />
  
</section>

{% schema %}
  {
    "name": "Story Section",
	"class": "story-section story-index",
    "settings": [
		{
			"type"  :  "text",
			"id"    :  "title",
			"label" :  "Title"
		},
		{
			"type"  :  "richtext",
			"id"    :  "text1",
			"label" :  "Top Text"
		},
		{
			"type"  :  "image_picker",
			"id"    :  "image",
			"label" :  "Image"
		},
		{
			"type"  :  "richtext",
			"id"    :  "text2",
			"label" :  "Bottom Text"
		}
	]
  }
{% endschema %}

