<section class="skills_level_camp">
            <div class="skills_level_camp__holder">
                <div class="skills_level_camp__header">
                    <h2 class="skills_level_camp__heading">{{ section.settings.heading }}</h2>
                </div>
                <div class="wrap-skills-card">
                    {% for block in section.blocks %}
                        <div class="skills_level_camp__card">
                            <div class="skills_level_camp__item swiper-slide">
                                   <div class="skills_level_camp__item-link">						
                                       <div class="skills_level_camp__item-content">
                                           <h3 class="skills_level_camp__item-heading">{{ block.settings.heading }}</h3>
                                           <div class="skills_sub-title">
                                                {{ block.settings.sub_description }}  
                                           </div>
                                           <div class="skills_level_camp__item-description">
                                                {{ block.settings.description }}
                                           </div>
                                           
                                       </div>
                                   </div>
                           </div>
                       </div>     
                    {% endfor %}  
                </div>    
            </div>
        </section>


        {% schema %}
            {
                "name": "Skill Level Block",
                "settings": [
                        {
                            "type": "text",
                            "id": "heading",
                            "label": "Heading"
                        }
                    ],
                    "blocks": [
                            {
                            "type": "Item",
                            "name": "Slide",
                            "settings": [
                                {
                                    "type": "text",
                                    "id": "heading",
                                    "label": "Heading"
                                },
                                {
                                    "type": "richtext",
                                    "id": "sub_description",
                                    "label": "Sub Description"
                                },
                                {
                                    "type": "richtext",
                                    "id": "description",
                                    "label": "Description"
                                }
                            ]
                            }
                        ],
                    
                    "presets": [
                        {
                            "name": "Skill Level Block"
                        }
                    ]
            }
            {% endschema %} 