
<section class="hero-banner">
    <div class="hero-banner__holder">
        <figure class="hero-banner__media">
            <img fetchpriority="high" decoding="async" width="1800" height="1200"
                src="{{ section.settings.bg_image |  img_url: 'master' }}"
                class="hero-banner__img" alt="">
        </figure>
        <div class="hero-banner__content">
            <h2 class="hero-banner__heading typo-heading typo-heading--1">{{ section.settings.heading }}</h2>
        </div>
    </div>
</section>

{% schema %}
{
    "name": "Hero Banner",
    "settings": [
        {
            "type": "image_picker",
            "id": "bg_image",
            "label": "Background Image"
        },
        {
            "type": "text",
            "id": "heading",
            "label": "Banner Heading"
        }
        ],
        
        "presets": [
            {
                "name": "Hero Banner"
            }
        ]
}
{% endschema %}
