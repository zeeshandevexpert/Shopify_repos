<!-- /snippets/social-sharing.liquid -->
{% assign shareButtonStyle = "btn btn--small" %}

{% if settings.share_facebook or settings.share_twitter or settings.share_pinterest %}
  <div class="social-sharing inline-list mb-0">

    {% if settings.share_facebook %}
      <a target="_blank" href="//www.facebook.com/sharer.php?u={{ shop.url | append: share_permalink }}" class="btn-facebook {{ shareButtonStyle }}" title="{{ 'general.social.alt_text.share_on_facebook' | t }}">
        <span class="fab fa-facebook-f" aria-hidden="true"></span>
        <span class="share-title" aria-hidden="true">{{ 'general.social.share_on_facebook' | t }}</span>
        <span class="visually-hidden">{{ 'general.social.alt_text.share_on_facebook' | t }}</span>
      </a>
    {% endif %}

    {% if settings.share_twitter %}
      <a target="_blank" href="//twitter.com/share?text={{ share_title | url_param_escape }}&amp;url={{ shop.url | append: share_permalink }}" class="btn-twitter {{ shareButtonStyle }}" title="{{ 'general.social.alt_text.share_on_twitter' | t }}">
        <span class="fab fa-twitter" aria-hidden="true"></span>
        <span class="share-title" aria-hidden="true">{{ 'general.social.share_on_twitter' | t }}</span>
        <span class="visually-hidden">{{ 'general.social.alt_text.share_on_twitter' | t }}</span>
      </a>
    {% endif %}

    {% if settings.share_pinterest %}
      <a target="_blank" href="//pinterest.com/pin/create/button/?url={{ shop.url | append: share_permalink }}&amp;media={{ share_image | img_url: '1024x1024' }}&amp;description={{ share_title | url_param_escape }}" class="btn-pinterest {{ shareButtonStyle }}" title="{{ 'general.social.alt_text.share_on_pinterest' | t }}">
        <span class="fab fa-pinterest-p" aria-hidden="true"></span>
        <span class="share-title" aria-hidden="true">{{ 'general.social.share_on_pinterest' | t }}</span>
        <span class="visually-hidden">{{ 'general.social.alt_text.share_on_pinterest' | t }}</span>
      </a>
    {% endif %}

  </div>
{% endif %}
