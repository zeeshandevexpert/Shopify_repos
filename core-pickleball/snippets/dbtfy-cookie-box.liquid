{%- if settings.dbtfy_cookie_box -%}
<div class="dbtfy dbtfy-cookie_box"
     data-anim-enter="{{settings.dbtfy_cookie_box_animation}}">
  <div id="CookieBox" class="animated wrapper-fluid cookie_box-{{ settings.dbtfy_cookie_box_position }}" style="display:none">
    <div class="container-cookie_box text-center">

      <div class="rte">
        {{ settings.dbtfy_cookie_box_text }}
      </div>

      <div class=" grid__item-btn-cookie_box">
        {% unless settings.dbtfy_cookie_box_button_label == blank %}
        <button class="btn {{ settings.dbtfy_cookie_box_button_style }} btn--small small--full btn--cookie_box">
          {{ settings.dbtfy_cookie_box_button_label | escape }}
        </button>
        {% endunless %}
        <button type="button" class="btn btn-square-small btn--close-cookie_box">
          <span class="fas fa-times" aria-hidden="true"></span>
        </button>
      </div>

    </div>
  </div>
</div>
{%- endif -%}