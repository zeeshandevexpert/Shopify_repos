  //   $('html, body').animate({scrollTop: $(href).offset().top}, 100);
  // });
</script>

{% schema %}
  {
    "name": "Custom Image With Text 3",
    "settings": [
      {
        "type": "checkbox",
        "id": "switch",
        "label": "Switch Directions"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Your heading here"
      },
      {
        "type": "richtext",
        "id": "text",
        "label": "Text",
        "default": "<p>Your text here</p>"
      },
      {
        "type": "text",
        "id": "link_text",
        "label": "Link Text",
        "default": "Link Text"
      },
      {
        "type": "url",
        "id": "link",
        "label": "Link Url"
      },
      {
        "type": "image_picker",
        "id": "img",
        "label": "Image"
      }
    ],
  "presets": [
    {
      "name": "Custom Image With Text 3"
    }
  ]
  }
{% endschema %}