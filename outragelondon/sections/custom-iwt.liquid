<style>
  #shopify-section-{{ section.id }} .custom-iwt-link{
    color: {{section.settings.lg}};
  }
  #shopify-section-{{ section.id }} .custom-iwt-link:hover{
    color: {{section.settings.fg}};
  }
  .custom-iwt-text a{
    color: {{section.settings.lg}};
  }
</style>
<div class="custom-iwt" style="background: {{ section.settings.bg }}; color: {{ section.settings.fg }};">
  <div class="custom-iwt-wrapper">
    <div class="custom-iwt-flex-wrapper {% if section.settings.swap %}custom-iwt-flex-swap{% endif %}">
      <div class="custom-iwt-flex-text-wrapper">
        <div class="custom-iwt-text-wrapper {{ section.settings.aligment }}">
          {% if section.settings.preheading != blank %}
            <p class="custom-iwt-preheading">{{ section.settings.preheading }}</p>
          {% endif %}
          {% if section.settings.heading != blank %}
            <h2 class="custom-iwt-heading">{{ section.settings.heading }}</h2>
          {% endif %}
          {% if section.settings.text != blank %}
            <div class="custom-iwt-text">{{ section.settings.text }}</div>
          {% endif %}
          {% if section.settings.link_text != blank %}
            <a href="{{ section.settings.link }}" class="custom-iwt-link">{{ section.settings.link_text }}</a>
          {% endif %}
          {% if section.settings.button_text != blank %}
            <a href="{{ section.settings.button_link }}" class="custom-iwt-btn" style="background: {{ section.settings.bbg }}; color: {{ section.settings.bfg }};">{{ section.settings.button_text }}</a>
          {% endif %}
        </div>
      </div>
      <div class="custom-iwt-flex-image-wrapper">
        {% if section.settings.img %}
          <img src="{{ section.settings.img | img_url: 'master' }}" class="custom-iwt-img" />
        {% endif %}
      </div>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Custom Image With Text",
  "settings": [
    {
      "type": "checkbox",
      "id": "swap",
      "label": "Switch Directions"
    },
    {
      "type": "image_picker",
      "id": "img",
      "label": "Image"
    },
    {
      "type": "radio",
      "id": "aligment",
      "label": "Text Alignment",
      "options": [
        {
          "value": "custom-iwt-left",
          "label": "Left"
        },
        {
          "value": "custom-iwt-center",
          "label": "Center"
        },
        {
          "value": "custom-iwt-right",
          "label": "Right"
        }
      ],
      "default": "custom-iwt-left"
    },
    {
      "type": "text",
      "id": "preheading",
      "label": "Preheading"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text"
    },
    {
      "type": "text",
      "id": "link_text",
      "label": "Link Text"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Link"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "bg",
      "label": "Bg Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "fg",
      "label": "Text Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "lg",
      "label": "Link Color",
      "default": "#197bbd"
    },
    {
      "type": "color",
      "id": "bbg",
      "label": "Button Bg Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "bfg",
      "label": "Button Text Color",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "Custom Image With Text"
    }
  ],
  "disabled_on": {
    "groups": ["custom.popups"]
  }
}
{% endschema %}