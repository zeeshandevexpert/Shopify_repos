<style>
.footer__logo{
  text-align: center;
}
  .footer__clear{
      border-bottom: 1px solid #e1e1e1
  }
  .custom-footer-section{
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
  }
.custom-footer-menu{
    margin: 0;
    display: flex;
    align-items: center;
    list-style: none;
    padding: 0;
    gap: 15px 30px;
  flex-wrap: wrap;
  justify-content: center;
}
.custom-footer-menu-li{
  
}
.custom-footer-menu-a{
    display: block;
    font-size: 12px;
}
  .disclosure-list__label{
    font-size: 12px;
  }
  .site-footer__linklist a{
    font-size: 12px;
    padding: 10px 0;
  }
.footer__title {
    margin-bottom: 20px;
    font-size: 11px;
    letter-spacing: 1px;
}
  .site-footer input, .site-footer select, .site-footer textarea{
    font-size: 12px;
  }
  .custom-desktop{
        padding: 0;
        width: 100% !important;
  }
  .custom-mobile{
    display: none;
        padding: 0;
        width: 100% !important;
  }
  @media screen and (max-width: 768px){
.custom-footer-section{
  flex-direction: column-reverse;
    padding-top: 30px;
    gap: 10px;
}
    .site-footer button.footer__title, .site-footer__linklist{
      text-align: left !important;
    }
  .custom-desktop{
    display: none;
  }
  .custom-mobile{
    display: block;
  }
  }
</style>
{%- liquid
  assign show_selectors = false
  assign currency_selector = false
  assign locale_selector = false

  if section.settings.show_currency_selector and shop.enabled_currencies.size > 1
    assign currency_selector = true
  endif

  if section.settings.show_locale_selector and shop.enabled_locales.size > 1
    assign locale_selector = true
  endif

  if currency_selector or locale_selector
    assign show_selectors = true
  endif
-%}

{%- if settings.color_footer == settings.color_body_bg -%}
  {%- style -%}
    .site-footer {
      border-top: 1px solid {{ settings.color_borders }};
    }
  {%- endstyle -%}
{%- endif -%}

<footer class="site-footer" data-section-id="{{ section.id }}" data-section-type="footer-section">
  <div class="page-width">
    {%- for block in section.blocks -%}
      {% if block.type == 'logo_social' %}
        <div {{ block.shopify_attributes }} class="grid__item footer__item--{{ block.id }} custom-mobile" data-type="{{ block.type }}">
          {%- style -%}
            @media only screen and (min-width: 769px) and (max-width: 959px) {
              .footer__item--{{ block.id }} {
                width: 50%;
                padding-top: 40px;
              }
              .footer__item--{{ block.id }}:nth-child(2n + 1) {
                clear: left;
              }
            }
            @media only screen and (min-width: 960px) {
              .footer__item--{{ block.id }} {
                width: {{ block.settings.container_width }}%;
              }

            }
          {%- endstyle -%}
          {% render 'custom-footer-logo', block: block %}
        </div>
        {% endif %}
      {%- endfor -%}
    <div class="grid">
      {%- assign row_width = 0 -%}
      {%- for block in section.blocks -%}
        {%- assign row_width = row_width | plus: block.settings.container_width -%}
        {%- if row_width > 100 -%}
          <div class="footer__clear small--hide"></div>
          {%- assign row_width = row_width | minus: 100 -%}
        {%- endif -%}

        <div {{ block.shopify_attributes }} class="grid__item footer__item--{{ block.id }}" data-type="{{ block.type }}">
          {%- style -%}
            @media only screen and (min-width: 769px) and (max-width: 959px) {
              .footer__item--{{ block.id }} {
                width: 50%;
                padding-top: 40px;
              }
              .footer__item--{{ block.id }}:nth-child(2n + 1) {
                clear: left;
              }
            }
            @media only screen and (min-width: 960px) {
              .footer__item--{{ block.id }} {
                width: {{ block.settings.container_width }}%;
              }

            }
          {%- endstyle -%}

          {%- liquid
            case block.type
              when 'custom'
                render 'footer-custom-text', block: block, container_width: block.settings.container_width
              when 'newsletter'
                render 'footer-newsletter', block: block
              when 'menu'
                render 'footer-menu', block: block
              when 'follow_shop_cta'
                render 'follow-shop-cta', block: block
            endcase
          -%}
        </div>
      {%- endfor -%}
    </div>

    {%- if show_selectors or section.settings.bmenu -%}
      <div class="footer__section custom-footer-section">
        {% if show_selectors %}
          {%- render 'multi-selectors',
            locale_selector: locale_selector,
            currency_selector: currency_selector,
            show_currency_flags: section.settings.show_currency_flags
            location: 'footer'
          -%}
        {% endif %}
        {% if section.settings.bmenu != blank %}
          <ul class="custom-footer-menu">
            {% for link in linklists[section.settings.bmenu].links %}
              <li class="custom-footer-menu-li">
                <a href="{{ link.url }}" class="custom-footer-menu-a">{{ link.title }}</a>
              </li>
            {% endfor %}
          </ul>
        {% endif %}
      </div>
    {%- endif -%}

    {%- for block in section.blocks -%}
      {% if block.type == 'logo_social' %}
        <div {{ block.shopify_attributes }} class="grid__item footer__item--{{ block.id }} custom-desktop" data-type="{{ block.type }}">
          {%- style -%}
            @media only screen and (min-width: 769px) and (max-width: 959px) {
              .footer__item--{{ block.id }} {
                width: 50%;
                padding-top: 40px;
              }
              .footer__item--{{ block.id }}:nth-child(2n + 1) {
                clear: left;
              }
            }
            @media only screen and (min-width: 960px) {
              .footer__item--{{ block.id }} {
                width: {{ block.settings.container_width }}%;
              }

            }
          {%- endstyle -%}
          {% render 'custom-footer-logo', block: block %}
        </div>
        {% endif %}
      {%- endfor -%}

    {%- if section.settings.show_payment_icons -%}
      {%- unless shop.enabled_payment_types == empty -%}
        <ul class="inline-list payment-icons footer__section">
          {%- for type in shop.enabled_payment_types -%}
            <li class="icon--payment">
              {{ type | payment_type_svg_tag }}
            </li>
          {%- endfor -%}
        </ul>
      {%- endunless -%}
    {%- endif -%}

    {%- if section.settings.show_copyright -%}
      <p class="footer__small-text">
        &copy; {{ 'now' | date: '%Y' }} {{ shop.name }}
        {%- if section.settings.copyright_text != blank -%}
          {{ section.settings.copyright_text }}
        {%- endif -%}
      </p>
    {%- endif -%}
    <!-- <p class="footer__small-text">{ { powered_by_link }}</p> -->

  </div>
</footer>

