{% if section.blocks.size > 0 %}
  <div class="custom-iwl">
    <div class="custom-iwl-wrapper page-width">
      <div class="custom-iwl-flex-wrapper">
        {% for block in section.blocks %}
          {% if block.settings.img %}
            {% if block.settings.link != blank %}
            <a href="{{ block.settings.link }}" class="custom-iwl-flex-item">
            {% else %}
            <div class="custom-iwl-flex-item">
            {% endif %}
              <img src="{{ block.settings.img | img_url: '1024x' }}" class="custom-iwl-img" />
              {% if block.settings.title != blank %}
                <p class="custom-iwl-title" style="color: {{section.settings.fg}}">{{ block.settings.title }}</p>
              {% endif %}
              {% if block.settings.link_text != blank %}
                <span class="custom-iwl-link" style="color: {{section.settings.fg}}">{{ block.settings.link_text }}</span>
              {% endif %}
            {% if block.settings.link != blank %}
            </a>
            {% else %}
            </div>
            {% endif %}
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
{% endif %}

{% schema %}
{
  "name": "Custom Image with Link",
  "settings": [
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "fg",
      "label": "Text Color",
      "default": "#000000"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
      {
        "type": "image_picker",
        "id": "img",
        "label": "Image"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "text",
        "id": "link_text",
        "label": "Link Text"
      },
      {
        "type": "url",
        "id": "link",
        "label": "Link"
      }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Image with Link"
    }
  ],
  "disabled_on": {
    "groups": ["custom.popups"]
  }
}
{% endschema %}