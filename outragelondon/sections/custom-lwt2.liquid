{% if section.blocks.size > 0 %}
  <div class="custom-lwt2" style="background: {{ section.settings.bg }}; color: {{ section.settings.fg }};">
    <div class="custom-lwt2-wrapper page-width">
      <div class="custom-lwt2-slider-wrapper">
        <div class="custom-lwt2-slider">
          {% for block in section.blocks %}
            {% if block.settings.title != blank and block.settings.logo %}
              <div>
                <div class="custom-lwt2-item">
                  <img src="{{ block.settings.logo | img_url: 'master' }}" class="custom-lwt2-img" />
                  <div class="custom-lwt2-item-content">
                    <p class="custom-lwt2-item-title">{{ block.settings.title }}</p>
                    {% if block.settings.text != blank %}
                      <p class="custom-lwt2-item-text">{{ block.settings.text }}</p>
                    {% endif %}
                    {% if block.settings.link_text != blank %}
                      <a href="{{ block.settings.link }}" class="custom-lwt2-link">{{ block.settings.link_text }}</a>
                    {% endif %}
                  </div>
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
{% endif %}

<script>
$('#shopify-section-{{ section.id }} .custom-lwt2-slider').slick({
  slidesToShow: 3,
  slidesToScroll: 1,
  dots: false,
  arrows: false,
  centerMode: true,
  focusOnSelect: true,
  swipeToSlide: true,
  centerPadding: '13vw',
  responsive: [
    {
      breakpoint: 1200,
      settings: {
        centerPadding: '8vw',
      }
    },
    {
      breakpoint: 992,
      settings: {
        centerPadding: '4vw',
      }
    },
    {
      breakpoint: 768,
      settings: {
        slidesToShow: 1,
        centerPadding: '18vw',
      }
    },
    {
      breakpoint: 450,
      settings: {
        centerMode: false,
        slidesToShow: 1
      }
    }
  ]
});
</script>
{% schema %}
{
  "name": "Custom Logo With Text 2",
  "settings": [
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "bg",
      "label": "Bg Color",
      "default": "#f3f3f3"
    },
    {
      "type": "color",
      "id": "fg",
      "label": "Text Color",
      "default": "#000000"
    }
  ],
  "blocks": [
    {
      "type": "logo",
      "name": "Logo",
      "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Your title here"
      },
      {
        "type": "text",
        "id": "text",
        "label": "Text",
        "default": "Your text here"
      },
      {
        "type": "text",
        "id": "link_text",
        "label": "Link Text"
      },
      {
        "type": "url",
        "id": "link",
        "label": "Link"
      }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Logo With Text 2"
    }
  ],
  "disabled_on": {
    "groups": ["custom.popups"]
  }
}
{% endschema %}