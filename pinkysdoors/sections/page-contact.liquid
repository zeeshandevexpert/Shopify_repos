{% render 'hs-defer-css' with filename: 'form-builder-customizations.css', pages: 'collection,index,product' | split: ',', minify: true, local: true %}
<hr class="hr--invisible">
<div class="page-width text-center">
  <h1 class="h2">{{ section.settings.heading }}</h1>
  {% comment %}{% include 'page-contact--forms' %}{% endcomment %}
  {% comment %}
  <div class="acerill-custom-form" data-form-id="184afeb1-9765-4f30-b34d-eb78b53a2e5b"></div>
  <script src="https://custom-forms-client.acerill.com/js/custom-forms-v2.js" type="text/javascript"></script>
  {% endcomment %}
  <div class="page-width--thin" style="margin-top: 50px;">
    <div class="acerill-custom-form" data-form-id="3e1838ad-77c6-40c1-99e3-ae8460c72478"></div>
    <script src="https://custom-forms-client.acerill.com/js/custom-forms-v2.js" type="text/javascript"></script>
  </div>
<div class="page-width">
  <ul class="flex one-whole contact-page--columns small--flex-wrap" >
    <li class="small--one-whole contact-page--column one-half">
      <div class="flex">
        <span class="icon">{% include 'icon-phone' %}</span>
        <div>
          <div>{{section.settings.phone_times}}</div>
          <div><a href="{{section.settings.phone_link}}">{{section.settings.phone}}</a></div>
        </div>
      </div>
    </li>

    <li class="one-whole contact-page--column">
      <div class="flex">
        <span class="icon">{% include 'icon-clock' %}</span>
        <div>
          <div>{{section.settings.office_hours}}</div>
          <!-- div> <p><span style="background-color:#ff5c4e;color: #ffffff;padding: 3px 13px;border-radius: 32px 0;">Christmas Hours</span> December 24 - December 26: Closed</p></div -->
          <!--div> <p><span style="background-color:#ff5c4e;color: #ffffff;padding: 3px 13px;border-radius: 32px 0;">New Year Hours</span> December 31 - January 2: Closed</p></div -->
        </div>
      </div>
    </li>

    <li class="one-whole contact-page--column">
      <div class="flex">
        <span class="icon">{% include 'icon-pin' %}</span>
        {% assign address_link = 'https://www.google.com/maps/place/Pinky%E2%80%99s+Iron+Doors/@34.0001603,-118.2335351,17z/data=!3m1!4b1!4m5!3m4!1s0x80c2b7c358799f31:0x8667b8a5cf059a8d!8m2!3d34.0002728!4d-118.2313416?hl=en&authuser=0' %}
        <div><a href="{{ address_link }}" target="_blank">{{section.settings.address | newline_to_br }}</a></div>
      </div>
    </li>

  </ul>
</div>
<div class="page-width--thin">
  <iframe width="100%" height="422" id="gmap_canvas" src="https://maps.google.com/maps?q={{section.settings.address | url_encode}}&t=&z=17&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0">
    <!-- Google Tag Manager -->
    <script>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src='https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);})(window,document,'script','dataLayer','GTM-M4V4S2S');</script>
    <!-- End Google Tag Manager -->
    <!-- Google Tag Manager (noscript) -->
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-M4V4S2S" height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
    <!-- End Google Tag Manager (noscript) -->
  </iframe>
</div>
{% schema %}
  {
    "name": "Contact Page",
    "settings": [
	{
		"type":"text",
		"id":"heading",
		"label":"Heading"
	},
	{
		"type":"textarea",
		"id":"address",
		"label":"Address"
	},
    {
        "type":"text",
		"id":"phone",
		"label":"Phone Number",
		"default":"(844) 843-6677"
	},
	{
        "type":"url",
		"id":"phone_link",
		"label":"Phone Link",
		"info":"tel:123-456-7890"
	},
    {
		"type":"textarea",
		"id":"phone_times",
		"label":"Phone Times",
		"default":"Monday-Friday 9 A.M. - 6 P.M. (PST)"
	},
     {
		"type":"text",
		"id":"email",
		"label":"Email Address",
		"default":"info@pinkysirondoors.com"
	},
	{
		"type":"textarea",
		"id":"office_hours",
		"label":"Office Hours",
		"default":"Monday to Friday from 9 A.M. - 6 P.M. (PST)"
	}
    ]
  }
{% endschema %}
