{% assign is_wholesale = false %}
{% if customer %}
  {% for tag in customer.tags %}
    {% if tag == 'wholesale' %}
      {% assign is_wholesale = true %}
    {% endif %}
    {% if tag contains 'discount' %}
      {% assign discount = tag | split: ':' | last | remove: '%' | plus: 0 %}
      {% assign percent_off = 100 | minus: discount | times: 0.01 %}
    {% endif %}
  {% endfor %}
{% endif %} 
