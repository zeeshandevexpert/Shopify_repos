.step[data-step="shipping_method"], .step[data-step="payment_method"] {
  .step__footer__previous-link.info_msg_checkoutbtn {
    cursor: pointer;
    display: block;
    background-color: black;
    background-clip: border-box;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    border: 1px transparent solid;
    text-align: center;
    border-radius: 5px;
    color: white;
    font-weight: 500;
    font-size: 80%;
    padding: 0.75em 1em;
    position: relative;
    -webkit-transition: background-color 0.2s ease-in-out, color 0.2s ease-in-out, -webkit-box-shadow 0.2s ease-in-out;
    transition: background-color 0.2s ease-in-out, color 0.2s ease-in-out, -webkit-box-shadow 0.2s ease-in-out;
    transition: background-color 0.2s ease-in-out, color 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    transition: background-color 0.2s ease-in-out, color 0.2s ease-in-out, box-shadow 0.2s ease-in-out, -webkit-box-shadow 0.2s ease-in-out;
    .icon-svg--color-accent {
      color: white !important;
    }
    &:hover {
      background: #333;
      color: white !important;
      .icon-svg--color-accent {
        color: white !important;
      }
    }
  }
}

.btn {
  background-image: -webkit-linear-gradient(top, #FB6957, #FA412C);
  background-image: -moz-linear-gradient(top, #FB6957, #FA412C);
  background-image: -ms-linear-gradient(top, #FB6957, #FA412C);
  background-image: -o-linear-gradient(top, #FB6957, #FA412C);
  background-image: -webkit-gradient(to bottom, #FB6957, #FA412C);
}
.step__footer__previous-link-content {
