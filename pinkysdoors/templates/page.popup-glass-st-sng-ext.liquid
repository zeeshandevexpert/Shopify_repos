{% else %}
<div class="page-width">
  <div class="grid">
    <div class="grid__item {% if page.handle == 'inspiration' %}one-whole{% else %} medium-up--five-sixths medium-up--push-one-twelfth {% endif %}">
      
      <div class="section-header text-center">
        {% if page.handle == 'thermally-broken-doors' %}
        <div class="text-center"><a class="btn btn--left-icon" href="/collections/thermally-broken-doors-special-order">{% include 'icon-chevron-left' %} Back</a></div>
        <hr class="hr--invisible" />
        {% endif %}

        <h1>{{ page.title }}</h1>
      </div>
	  {% if page.handle == 'reviews' %}
      <div class="full-page--preloader text-center">
        {% include 'icon-preloader' %}
      </div>
      {% endif %}
      <div class="rte">
        
        {% if page.content != blank %}
        {% capture content %}{{page.content}}{% endcapture %}
		{% include 'shortcode' load: content %}
        {% else %}
        {% include 'placeholder-text', paragraphs: 4 %}
        {% endif %}
      </div>
      {% if page.handle == 'thermally-broken-doors' %}
      <div class="text-center"><a class="btn btn--left-icon" href="/collections/thermally-broken-doors-special-order">{% include 'icon-chevron-left' %} Back</a></div>
      {% endif %}
    </div>
  </div>
</div>
{% endif %}

