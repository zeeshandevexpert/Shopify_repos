{% elsif page.handle == 'how-our-website-works' %}
  {% section 'page-how-the-site-works' %}
{% elsif page.handle == 'faq' %}
  {% section 'page-faq' %}
{% elsif page.handle == 'about-us' %}
  {% section 'page-about-timeline' %}
{% elsif page.handle contains 'category-contact' %}
  {% section 'page-category-contact' %}
{% elsif page.handle contains 'customize-anything' %}
  {% section 'page-category-contact' %}
{% elsif page.handle == 'steel-windows-doors-nfrc-rated' %}
  {% include 'page-nfrc' %}
{% elsif page.handle == 'pinkys-dealer-trade-program' %}
	{% section 'page-dealer-program' %}
