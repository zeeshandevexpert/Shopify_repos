{{ 'section-text-blocks.min.css' | asset_url | stylesheet_tag }}

<style>
  .text-advert-section--{{ section.id }} {
    background-color: {{ section.settings.background-color }}!important;
    color: {{ section.settings.text-color }} !important;
  }

  .text-advert-section--{{ section.id }} a {
    color: {{ section.settings.text-color }} !important;
  }

  .text-advert-section--{{ section.id }} svg {
    fill: {{ section.settings.icon-color }} !important;
  }

  .text-advert-section--{{ section.id }} .swiper-pagination-bullet-dot {
      background: {{ section.settings.text-color }};
  }

  @media screen and (min-width: 768px) {
    .homepage-sections-wrapper .text-advert-section__item {
      border-left: 1px solid {{ section.settings.text-color | color_modify: 'alpha', 0.2 }};
    }
  }
</style>

{% if section.blocks.size > 0 %}

{% capture id %}data-wetheme-section-type="text--text-adverts" data-wetheme-section-id="{{ section.id }}"{% endcapture %}

<div class="sections-wrapper text--text-adverts__section-wrapper homepage-sections-wrapper text-advert-section--{{ section.id }}" {{ id }}>

  <div class="container text-advert__container d-none d-md-block">

    <div class="row text-advert-section">
      {% for block in section.blocks %}

      <div class="text-advert-section__item wow

      " {{ block.shopify_attributes }}>
        <div class="text-advert-section__item-inner">

            <div class="text-advert-section__text-wrapper">

              {% if block.settings.icon != 'none' %}
                <div class="text-advert-section__icon-wrapper text-adverts__icon-size--large">
                    {% assign icon = block.settings.icon %}
                    {% assign iconColor = block.settings.icon-color %}
                    {% render 'icons', icon: icon, iconColor: iconColor %}
                </div>
              {% endif %}

              {% if block.settings.heading != blank %}
                <span class="type-subheading type-subheading--1 text-advert-section__header">{{ block.settings.heading | escape }}</span>
              {% endif %}

              {% if block.settings.subheading != blank %}
                <span class="text-advert-section__sub-header h6">{{ block.settings.subheading | escape }}</span>
              {% endif %}

              {% if block.settings.link != blank %}
                <p class="text-advert-section_link"><a href="{{ block.settings.link }}">{{ block.settings.buttonLabel | escape }}</a></p>
              {% endif %}
            </div>


        </div>
      </div>
      {% endfor %}
    </div>

  </div>

  <div class="container d-block d-md-none">
    <div class="row text-advert-section mobile-homepage-text-adverts swiper-container">
      <ul class="slides swiper-wrapper">
        {% for block in section.blocks %}

          <li class="swiper-slide" {{ block.shopify_attributes }}>
            <div class="grid__item text-advert-section__item">

                <div class="text-advert-section__text-wrapper">

                    {% if block.settings.icon != 'none' %}
                    <div class="text-advert-section__icon-wrapper text-adverts__icon-size--large">
                        {% assign icon = block.settings.icon %}
                        {% assign iconColor = block.settings.icon-color %}
                        {% render 'icons', icon: icon, iconColor:  %}
                    </div>
                {% endif %}

                  {% if block.settings.heading != blank %}
                    <span class="text-advert-section__header type-subheading type-subheading--1">{{ block.settings.heading | escape }}</span>
                  {% endif %}

                  {% if block.settings.subheading != blank %}
                    <span class="text-advert-section__sub-header h6">{{ block.settings.subheading | escape }}</span>
                  {% endif %}

                  {% if block.settings.link != blank %}
                    <p class="text-advert-section_link"><a href="{{ block.settings.link }}">{{ block.settings.buttonLabel | escape }}</a></p>
                  {% endif %}

                </div>

            </div>
          </li>

        {% endfor %}
      </ul>
      {% if section.blocks.size > 1 %}
        <div class="swiper-pagination"></div>
      {% endif %}
    </div>
  </div>

</div>

{% endif %}

