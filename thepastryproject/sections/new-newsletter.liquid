{{ 'new-newsletter.css' | asset_url | stylesheet_tag }}
{%- style -%}
  .section-{{ section.id }}-main {
    {% if section.settings.background_image != blank %}
        background-image: url("{{ section.settings.background_image | image_url: width: 1920 }}");
    {% endif %}    
    background-color: {{ section.settings.background }};
  }
{%- endstyle -%}

<section class="newsletter_content_section new-newsletter-section section-{{ section.id }}-main">
  <div class="container">
    <div class="newsletterInnerWrap">
      <div class="newsletterInnerWrapOuter">
        <div class="newsletter__title wow">
            {%- if section.settings.title != blank or section.settings.subheading != blank or section.settings.newsletter_description != blank -%}
            <div class=" text-center">
              {%- if section.settings.title != blank -%}
                <h2 class="sectionHeading">{{ section.settings.title | escape }}</h2>
              {%- endif -%}
              {%- if section.settings.subheading != blank -%}
                <h3 class="type-subheading type-subheading--1 wow{%- if section.settings.title != blank -%} typography--padding-bottom{%- endif -%}">
                  {{ section.settings.subheading | escape }}
                </h3>
              {%- endif -%}
              {%- if section.settings.newsletter_description != blank -%}
                {{ section.settings.newsletter_description }}
              {%- endif -%}
            </div>
          {%- endif -%}
        </div>

        <div class="newsletter_form wow">
          {%- render 'newsletter-form', form_id: 'newsletter_section_form' -%}
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Newsletter (New)",
  "class": "new-newsletter",
  "settings": [
    {
      "type": "header",
      "content": "Section Schema"
    },
    {
      "type": "color",
      "id": "background",
      "label": "Background Color",
      "default": "#F9A820"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "id": "title",
      "type": "text",
      "label": {
        "en": "Heading",
        "de": "Überschrift",
        "es": "Encabezado",
        "fr": "Rubrique",
        "pt-PT": "Título"
      },
      "default": {
        "en": "Join our mailing list",
        "de": "Melden Sie sich bei unserer Mailingliste an",
        "es": "Únase a nuestra lista de correo electrónico",
        "fr": "Inscrivez-vous à notre liste d'envoi",
        "pt-PT": "Aderir à nossa Lista de E-mails"
      }
    },
    {
      "type": "text",
      "id": "subheading",
      "label": {
        "en": "Subheading",
        "de": "Unterüberschrift",
        "es": "Subencabezado",
        "fr": "Sous-rubrique",
        "pt-PT": "Subtítulo"
      }
    },
    {
      "type": "richtext",
      "id": "newsletter_description",
      "label": {
        "en": "Text",
        "de": "Text",
        "es": "Texto",
        "fr": "Texte",
        "pt-PT": "Texto"
      },
      "default": {
        "en": "<p>Describe the benefits of your newsletter</p>",
        "de": "<p>Beschreiben Sie die Vorteile Ihres Newsletters</p>",
        "es": "<p>Describe las ventajas de tu boletín de noticias</p>",
        "fr": "<p>Décrivez les avantages de votre newsletter</p>",
        "pt-PT": "<p>Descreva os benefícios do seu boletim informativo</p>"
      }
    }
  ],
  "presets": [
    {
      "name": "Newsletter (New)",
      "category": {
        "en": "Newsletter",
        "de": "Newsletter",
        "es": "Boletín de noticias",
        "fr": "Bulletin d'information",
        "pt-PT": "Newsletter"
      }
    }
  ],
  "enabled_on": {
    "groups": [
      "footer"
    ],
    "templates": [
      "404",
      "article",
      "blog",
      "cart",
      "collection",
      "list-collections",
      "index",
      "page",
      "search",
      "product"
    ]
  }
}
{% endschema %}
