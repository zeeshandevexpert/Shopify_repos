{{ 'section-product-info-columns.min.css' | asset_url | stylesheet_tag }}

{% case section.blocks.size %}
	{% when 1 %}
		{%- assign column_size = 'info-cols--item col-sm-12 col-md-6' -%}
	{% when 2 %}
		{%- assign column_size = 'info-cols--item col-sm-12 col-md-6' -%}
	{% else %}
		{%- assign column_size = 'info-cols--item col-sm-12 col-md-4' -%}
{% endcase %}

<section class="homepage-sections-wrapper">
	<div class="info-cols--container">
		<div class="row">
			{% for block in section.blocks %}
	
			<div class="{{ column_size }} wow" {{ block.shopify_attributes }}>
	
			{% if block.settings.link != blank %}
				<a href="{{ block.settings.link }}" class="info-cols--image-is-link">
					<div class="info-cols--image">
			{% else %}
				<div class="info-cols--image">
			{% endif %}

			{% if block.settings.image == blank %}
					{{ 'image' | placeholder_svg_tag: 'icon--placeholder' }}
			{% else %}
				{% render 'responsive-image' with block.settings.image, alt: block.settings.image.alt %}
			{% endif %}

			{% if block.settings.link != blank %}
					</div>
				</a>
			{% else %}
				</div>
			{% endif %}

			{% if block.settings.title != '' %}
				<h3 class="type-subheading type-subheading--1 info-cols--title">{{ block.settings.title }}</h3>
			{% endif %}

			{% if block.settings.text != '' %}
				<div class="info-cols--text">{{ block.settings.text }}</div>
			{% endif %}

			{% if block.settings.link_text != '' and block.settings.link != blank %}
				<a href="{{ block.settings.link }}" class="info-cols--link_text">{{ block.settings.link_text }}</a>
			{% endif %}

			</div>

		{% endfor %}

		{% if section.blocks.size == 0 %}
			<div class="placeholder-noblocks">
				{{ 'general.onboarding.no_content' | t }}
			</div>
		{% endif %}

		</div>
	</div>
</section>

