{{ 'section-rich-text.min.css' | asset_url | stylesheet_tag }}


{% style %}
{%- if section.settings.background != blank -%}
    .section-{{ section.id }}-style {
        background: {{ section.settings.background }};
    }
{%- endif -%}
{%- if section.settings.text_color != blank -%}
.section-{{ section.id }}-style {
    color: {{ section.settings.text_color }};
}
{%- endif -%}
{% endstyle %}


<section class="class-contact-wrapper section-{{ section.id }}-style">

  <div class="container">
    <div class="row">
      <div class="col">
        {% if section.settings.title != blank or section.settings.subheading != blank %}
          <div class="text-center custom-font">
            {% if section.settings.subheading != blank %}
              <h3 class="type-subheading type-subheading--1 wow{% if section.settings.title != blank %} typography--padding-bottom{% endif %}">{{ section.settings.subheading | escape }}</h3>
            {% endif %}
            {% if section.settings.title != blank %}
              <h2 class="wow sectionHeading">{{ section.settings.title | escape }}</h2>
            {% endif %}
          </div>
        {% endif %}
      </div>
    </div>

      <div class="homepage-indiv-section-wrapper grid--full homepage-featured-content-wrapper wow">
        <div class="row">
        {% case section.settings.width %}
          {% when 'small' %}
            <div class="col-md-6 offset-md-3 col-12 homepage-featured-rich-text">
          {% when 'medium' %}
            <div class="col-md-8 offset-md-2 col-12 homepage-featured-rich-text">
          {% when 'large' %}
            <div class="col-md-10 offset-md-1 col-12 homepage-featured-rich-text">
          {% when 'full-width' %}
            <div class="col-md-12 col-12 homepage-featured-rich-text">
        {% endcase %}

          {% if section.settings.text != blank %}
            <div class="rte featured-row__subtext textarea">{{ section.settings.text }}</div>
          {% endif %}

          {% if section.settings.button_label != blank and section.settings.button_link != blank %}
            <div>
              <a href="{{ section.settings.button_link }}" class="btn btn-primary btn-class-contact">
                {{ section.settings.button_label }}
              </a>
            </div>
          {% endif %}

        </div>
      </div>
    </div>
  </div>

</section>

