{% schema %}
  {
    "name": "Home Text With Image",
    "settings": [
      {
    "type": "range",
    "id": "font_padding",
    "min": 12,
    "max": 100,
    "step": 1,
    "unit": "px",
    "label": "Padding",
    "default": 16
    },
    {
    "type": "checkbox",
    "id": "flip_id",
    "label": "Swap section", 
    "default": false
    },

    {
        "type": "color",
        "id": "getSection--background-color",
        "label":  "Section background",
        "default" : "#2D2D2D"
        },

    {
          "type": "image_picker",
          "id": "get_subscription_image",
          "label": "Image"
     },

      {
                "type": "text",
                "id": "get_subscription_title",
                "label": "Title"
        },
      {
                "type": "html",
                "id": "get_subscription_arrow",
                "label": "Arrow Image"
        },
       {
          "type": "image_picker",
          "id": "arrow_image",
          "label": "Image"
     },

        {
            "id": "get_subscription_heading",
            "type": "text",
            "label": "Heading",
            "default": "Heading"
            
        },

      {
            "type": "text",
            "id": "get_subscription_subheading",
            "label": "Heading",
            "default": "Heading"
        },
      {
           "type": "html",
            "id": "get_subscription_points",
            "label": "Text",
            "default": "<p>Content goes here...</p>"
        },

    {
      "id": "link",
      "type": "url",
      "label": "Link URL"
    },
    {
      "id": "linktext",
      "type": "text",
      "label": "Link text",
      "default": "Click here"
    },
         {
            "type": "color",
            "id": "button--background-color",
            "label":"Button color",
            "default": "#2D2D2D"
        },
      {
        "type": "color",
        "id": "getSection--background-text-color",
        "label":  "Text color",
        "default" : "#2D2D2D"
        }
        
    ],
  "presets": [
    {
      "name": "Get Subscription"  
    }
  ]
  }
{% endschema %}

