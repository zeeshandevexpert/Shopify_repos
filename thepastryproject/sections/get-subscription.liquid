<div class="get-subscription-section-outer  {% if section.settings.font_padding != blank %}section-padding{% endif %}" style="background-color: {{ section.settings.getSection--background-color }};">
  
  <div class="container">

  <div class="row align-items-center {% if section.settings.flip_id != blank %}flex-row-reverse{% endif %} " >

  <div class="col-12 col-lg-6 d-flex justify-content-lg-start justify-content-center{% if section.settings.flip_id != blank %} justify-content-lg-end  reverseContentColumn{% endif %}">

<div class="contentImageColumnOuter position-relative">
    
       <div class="get-subscription-arrowContent position-absolute">
       {% if section.settings.get_subscription_title != blank %}
        <span class="arrowContentText">{{ section.settings.get_subscription_title }}</span>
      {% endif %}
  
      {% if section.settings.get_subscription_arrow != blank %}
        <span class="arrowContentIndicaton">{{ section.settings.get_subscription_arrow }}</span>
      {% endif %}
      
       </div>
        <div class="get-subscription-image">
          <img class="get-subscription-img" alt=""  src="{{ section.settings.get_subscription_image | img_url: ' ' }}" />
        </div>
        <div class="get-subscription-freeShipping position-absolute">
        {% if section.settings.arrow_image != blank %}
        <div class="freeShipping-img"><img class="arrow-img" alt="" src="{{ section.settings.arrow_image | img_url: ' ' }}" /></div>
        {% endif %}
        <span></span>
        </div>  
</div>
  </div>

    <div class="col-12 col-lg-6">
 <div class="get-subscription-right-content">
         {% if section.settings.get_subscription_heading != blank %}
              <h3 class="sectionSubheading">{{ section.settings.get_subscription_heading }}</h3>
            {% endif %}
               {% if section.settings.get_subscription_subheading != blank %}
              <h2 class="sectionHeading">{{ section.settings.get_subscription_subheading }}</h2>
            {% endif %}
              {% if section.settings.get_subscription_points != blank %}
               {{ section.settings.get_subscription_points }}
            {% endif %}
         </div>
          <div class="get-subscription-right-button">
          <a class="btn btn-primary" href="{{ section.settings.link }}">
         {{ section.settings.linktext }}
          </a>
          </div>

      
    </div>
    
  </div>
</div>

