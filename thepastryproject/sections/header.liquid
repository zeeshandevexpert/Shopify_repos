                      {% when 'total' %}
                          - <span class="cart-item-count-header cart-item-count-header--total js-cart-total">{{ cart.total_price | money }}</span>
                      {% endcase %}
                  </span>
                {% endif %}
        </a>       
      {% endif %}
    </div>

    <noscript>
      <div class="mobile-side-column mobile-header-wrap--icons mobile-header-right">
        <a href="{{ routes.search_url }}" class="icons--inline search-show alt-focus header-link" title="{{ 'layout.header.search' | t }}" tabindex="0">
          <span class="header-icon">
            {% render 'icon-search' %}
          </span>
        </a>
  
        <a href="{{ routes.cart_url }}" class="alt-focus header-link slide-menu {% unless template == 'cart' or settings.cart-type == 'page' %}js-drawer-open-cart{% endunless %}">
          <span class="header-icon">
            {% render 'icon-basket' %}
          </span>
        </a>
      </div>
    </noscript>
    
  </div>
</div>



