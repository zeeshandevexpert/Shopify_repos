<style>

  .header-wrapper {
    background-color: {{ section.settings.header--background-color }};
}
  .site-header__logo-image img,
  .overlay-logo-image {
    max-width: {{ section.settings.logo_max_width }}px;
  }

  .header-wrapper .header-content__item {
    flex: 0 0 auto;
  }

  @media screen and (min-width: 992px) {
    .site-header__logo-image img,
    .overlay-logo-image {
      width: {{ section.settings.logo_max_width }}px;
    }
   .header-wrapper .header-content--logo {
      width: {{ section.settings.logo_max_width }}px;
      /* flex-basis: {{ section.settings.logo_max_width }}px; */
      /* flex : 0 0 {{ section.settings.logo_max_width }}px; */
     flex : 0 0 250px;
   }
  }

  @media screen and (max-width: 768px) {
    #site-header svg, .sticky-header-wrapper svg {
        height: 24px;
    }
  }

  .header-wrapper:not(.header-search--expanded) .top-search #search-wrapper {
    background: {% if settings.header-background-color == "rgba(0,0,0,0)" %}var(--page-background){% else %}var(--header-background){% endif %}!important;
    border: 1px solid transparent !important;
    border-bottom: 1px solid {% if settings.header-background-color == "rgba(0,0,0,0)" %}var(--page-background){% else %}var(--header-background){% endif %}!important;
  }

  .header-wrapper:not(.header-search--expanded) .top-search input {
    color: {% if settings.header-background-color == "rgba(0,0,0,0)" %}var(--color-primary){% else %}var(--header-text){% endif %}!important;
  }

  .header-wrapper:not(.header-search--expanded)  #top-search-wrapper #search_text::placeholder {
    color: {% if settings.header-background-color == "rgba(0,0,0,0)" %}var(--color-primary){% else %}var(--header-text){% endif %};
  }

  .header-wrapper:not(.header-search--expanded) #top-search-wrapper #search_text::-webkit-input-placeholder {
    color: {% if settings.header-background-color == "rgba(0,0,0,0)" %}var(--color-primary){% else %}var(--header-text){% endif %};
  }

  .header-wrapper:not(.header-search--expanded) #top-search-wrapper #search_text:-ms-input-placeholder {
    color: {% if settings.header-background-color == "rgba(0,0,0,0)" %}var(--color-primary){% else %}var(--header-text){% endif %};
  }

  .header-wrapper:not(.header-search--expanded) #top-search-wrapper #search_text::-moz-placeholder {
    color: {% if settings.header-background-color == "rgba(0,0,0,0)" %}var(--color-primary){% else %}var(--header-text){% endif %};
  }

  .header-wrapper:not(.header-search--expanded) #top-search-wrapper #search_text:-moz-placeholder {
    color: {% if settings.header-background-color == "rgba(0,0,0,0)" %}var(--color-primary){% else %}var(--header-text){% endif %};
  }

  .header-wrapper .predictive-search-group {
    background-color: {% if settings.header-background-color == "rgba(0,0,0,0)" %}var(--page-background){% else %}var(--header-background){% endif %}!important;
  }

  .header-wrapper .search-results__meta {
    background: {% if settings.header-background-color == "rgba(0,0,0,0)" %}var(--page-background){% else %}var(--header-background){% endif %}!important;
  }

  .header-wrapper .search-results__meta-view-all a {
    color: {% if settings.header-background-color == "rgba(0,0,0,0)" %}var(--color-primary){% else %}var(--header-text){% endif %}!important;
  }

  .header-wrapper .search-results-panel .predictive-search-group h2 {
    color: {% if settings.header-background-color == "rgba(0,0,0,0)" %}var(--color-primary){% else %}var(--header-text){% endif %};
  }

  .header-wrapper .search-results-panel .predictive-search-group .search-vendor, .search-results-panel .predictive-search-group .money {
    color: {% if settings.header-background-color == "rgba(0,0,0,0)" %}var(--color-primary){% else %}var(--header-text){% endif %};
  }

  .header-wrapper .search--result-group h5 a {
    color: {% if settings.header-background-color == "rgba(0,0,0,0)" %}var(--color-primary){% else %}var(--header-text){% endif %}!important;
  }

  .header-wrapper .predictive-loading {
    color: {% if settings.header-background-color == "rgba(0,0,0,0)" %}var(--color-primary){% else %}var(--header-text){% endif %}!important;
  }

  .header-wrapper,
  .header-content--top-bar,
  .sticky-header-wrapper {
    border-bottom: {% if section.settings.show_border %}1px solid var(--header-border-color){% else %}none{% endif %};
  }

  .mega-menu--dropdown-wrapper .dropdown-menu:not(.dropdown-menu--mega) {
    border: {% if section.settings.show_border %}1px solid var(--header-border-color){% else %}none{% endif %};
  }

  .mega-menu--dropdown-wrapper .dropdown-menu--mega {
    border-top: {% if section.settings.show_border %}1px solid var(--header-border-color){% else %}none{% endif %};
  }

  .mega-menu .dropdown-submenu {
    border-right: {% if section.settings.show_border %}1px solid var(--header-border-color){% else %}none{% endif %};
  }

</style>

{% assign expanded_search_display = 'hidden' %}
{% if section.settings.search-expand %}
  {% if section.settings.logo-placement == 'left' or section.settings.top_bar_linklist == blank %}
    {% assign expanded_search_display = 'bottom' %}
  {% else %}
