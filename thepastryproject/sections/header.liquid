{% capture header_logo %}

<div class="site-header__logo h1" itemscope itemtype="http://schema.org/Organization">

  {% capture props %}itemprop="logo"{% endcapture %}

  {% comment %}If main logo but no overlay logo{% endcomment %}
	{% if section.settings.logo and section.settings.overlay_logo == blank %}
		<a href="{{ routes.root_url }}" itemprop="url" class="site-header__logo-image">
			{% capture alt %}{{ section.settings.logo.alt | default: shop.name }}{% endcapture %}
			{% render 'responsive-image' with section.settings.logo, alt: alt, blur: false, props: props %}
		</a>

  {% comment %}If overlay logo enabled but not main{% endcomment %}
  {% elsif section.settings.overlay_logo and section.settings.logo == blank %}
    {% capture overlayAlt %}{{ section.settings.overlay_logo.alt | default: shop.name }}{% endcapture %}

    {% if template == 'index' and section.settings.overlay_header %}
      <a href="{{ routes.root_url }}" itemprop="url" class="site-header__logo-image">
        {% render 'responsive-image' with section.settings.overlay_logo, alt: overlayAlt, blur: false, props: props, class: "overlay-logo-image" %}
      </a>
      <a class="site-header__logo-link alt-focus header-link custom-font overlay-logo-image--sticky" href="{{ routes.root_url }}" itemprop="url">{{ shop.name }}</a>
    {% else %}
      <a class="site-header__logo-link alt-focus header-link custom-font" href="{{ routes.root_url }}" itemprop="url">{{ shop.name }}</a>
    {% endif %}

  {% comment %}If both logos are enabled{% endcomment %}
  {% elsif section.settings.overlay_logo and section.settings.logo %}
    <a href="{{ routes.root_url }}" itemprop="url" class="site-header__logo-image">
      {% capture alt %}{{ section.settings.logo.alt | default: shop.name }}{% endcapture %}
      {% capture overlayAlt %}{{ section.settings.overlay_logo.alt | default: shop.name }}{% endcapture %}

      {% if template == 'index' and section.settings.overlay_header %}
        {% render 'responsive-image' with section.settings.overlay_logo, alt: overlayAlt, blur: false, props: props, class: "overlay-logo-image" %}
        {% render 'responsive-image' with section.settings.logo, alt: alt, blur: false, props: props, class: "overlay-logo-image--sticky" %}
      {% else %}
         {% render 'responsive-image' with section.settings.logo, alt: alt, blur: false, props: props %}
      {% endif %}
    </a>

  {% comment %}Show text title{% endcomment %}
	{% else %}
		<a class="site-header__logo-link alt-focus header-link custom-font" href="{{ routes.root_url }}" itemprop="url">{{ shop.name }}</a>
	{% endif %}
</div>
{% endcapture %}

<div id="theme-section-header" class="header-wrapper{% if section.settings.logo-placement == 'left' %} logo-placement--left{% else %} logo-placement--center{% endif %}{% if section.settings.overlay_header %} overlay--active{% endif %}{% if section.settings.sticky_header == "enable-scroll-up"%} sticky-scroll-up{% endif %}{% if section.settings.search-expand %} header-search--expanded search-expand{% endif %}" data-wetheme-section-type="header" data-wetheme-section-id="{{ section.id }}">

{% if section.settings.sticky_header != 'disable' %}
<div class="sticky-header-wrapper{% if section.settings.sticky_header_logo == false %} hide-sticky-logo{% endif %}">
  <div class="sticky-header-wrapper__inner">
    <div class="sticky-desktop-header d-none d-lg-block"></div>
    <div class="sticky-desktop-menu d-none d-lg-block {% if section.settings.logo-placement == 'left' %} nav-placement--left{% endif %}"></div>
    <div class="sticky-header-search d-none d-lg-block">
      <li class="sticky-header-search-icon">
        {% if settings.predictive_search_enabled %}
          <button
            type="button"
            class="icons--inline search-show alt-focus header-link header-link--button"
            title="{{ 'layout.header.search' | t }}" tabindex="0"
            aria-label="{{ 'general.search.open_search' | t }}"
            aria-controls="top-search-wrapper"
          >
            {% if section.settings.icon-enable %}
              <span class="header-icon">
                {% render 'icon-search' %}
              </span>
            {% else %}
              <span class="header--supporting-text">{{ 'layout.header.search' | t }}</span>
            {% endif %}
          </button>
        {% else %}
          <a href="{{ routes.search_url }}" class="icons--inline search-show alt-focus header-link position-relative" title="{{ 'layout.header.search' | t }}" tabindex="0">
            {% if section.settings.icon-enable %}
              <span class="header-icon">
                {% render 'icon-search' %}
                <span class="header--supporting-text">{{ 'layout.header.search' | t }}</span>
              </span>
            {% else %}
            
            {% endif %}
          </a>
        {% endif %}
      </li>
    </div>
    <div class="sticky-mobile-header d-lg-none">
      {% comment %}Mobile menu will be copied here{% endcomment %}
    </div>
  </div>
</div>
{% endif %}

<div class="header-logo-wrapper{% if expanded_search_display == 'top' %} expanded-search--top{% endif %}" data-section-id="{{ section.id }}" data-section-type="header-section">

