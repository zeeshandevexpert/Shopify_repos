{{ 'section-newsletter.min.css' | asset_url | stylesheet_tag }}
<style>


.newsletter__title h2 {
    letter-spacing: initial;
    /* font-size: 44px;
    text-transform: initial; */
    font-weight: 900;
}
  
.newsletter__title .type-subheading {
    visibility: visible;
    font-size: 18px;
    letter-spacing: initial;
    text-transform: initial;
    font-weight: 500;
    color: #ffffff;
}

.newsletterInnerWrapOuter .input-group-field {
  max-width: 450px;
  background: #fff;
  border-radius: 100px;
  padding: 5px 30px;
  height:60px;
}

.newsletterInnerWrap {
  background-image: url("{{ section.settings.newsletter--background-image | img_url: ' ' }}");
  background-repeat: no-repeat;
  background-position: center center;
  background-color: {{ section.settings.newsletter--background-color }};
  padding: 100px 20px;
}

.newsletter__title {
  margin: 0 0 22px;
}

.newsletterInnerWrapOuter .btn {
    max-width: 230px;
    width: 100%;
    font-weight: 500 !important;
    height: 60px;
    margin: 0;
 
}

  @media(max-width: 991px){
    
    .newsletterInnerWrap {
        background-position: top center;
        background-size: 100% auto;
        padding-block: 50px;
    }

    .homepage-headline-text__link h2 {
      text-transform: capitalize;
      letter-spacing: 0;
    }
    
  }
@media(max-width: 767px){
   .newsletterInnerWrapOuter .btn {
    max-width: 100%;
  }
}
  
</style>

<section class="homepage-sections-wrapper newsletter_content_section">

{% assign title = false %}
{% if section.settings.title != blank or
  section.settings.subheading != blank or
  section.settings.newsletter_description != blank %}
  {% assign title = true %}
{% endif %}

  <div class="container">

      <div class="newsletterInnerWrap">
        <div class="newsletterInnerWrapOuter">
        <div class="newsletter__title wow">
          {% if title %}
            <div class=" text-center">
             
              {% if section.settings.title != blank %}
                <h2 class="sectionHeading">{{ section.settings.title | escape }}</h2>
              {% endif %}
             {% if section.settings.subheading != blank %}
                <h3 class="type-subheading type-subheading--1 wow{% if section.settings.title != blank %} typography--padding-bottom{% endif %}">{{ section.settings.subheading | escape }}</h3>
              {% endif %}
              {% if section.settings.newsletter_description != blank %}
                {{ section.settings.newsletter_description }}
              {% endif %}
            </div>
          {% endif %}
        </div>
    
  
    
        <div class="newsletter_form wow">
          {% render 'newsletter-form', form_id: 'newsletter_section_form' %}
        
      
    </div></div>
            </div>
  </div>

</section>

{% schema %}
{
    "name": {
        "en": "Newsletter",
        "de": "Newsletter",
        "es": "Boletín de noticias",
        "fr": "Bulletin d'information",
        "pt-PT": "Newsletter"
    },
    "class": "homepage-section--newsletter-wrapper",
    "settings": [

       {
        "type": "color",
        "id": "newsletter--background-color",
        "label":  "Section background",
        "default" : "#2D2D2D"
        },
{
        "type": "image_picker",
        "id": "newsletter--background-image",
        "label":  "Background Image"
        },
        
        {
            "id": "title",
            "type": "text",
            "label": {
                "en": "Heading",
                "de": "Überschrift",
                "es": "Encabezado",
                "fr": "Rubrique",
                "pt-PT": "Título"
            },
          
            "default": {
                "en": "Join our mailing list",
                "de": "Melden Sie sich bei unserer Mailingliste an",
                "es": "Únase a nuestra lista de correo electrónico",
                "fr": "Inscrivez-vous à notre liste d'envoi",
                "pt-PT": "Aderir à nossa Lista de E-mails"
            }
        },

      {
            "type": "text",
            "id": "subheading",
            "label": {
              "en": "Subheading",
              "de": "Unterüberschrift",
              "es": "Subencabezado",
              "fr": "Sous-rubrique",
              "pt-PT": "Subtítulo"
            }
        },
      
        {
            "type": "richtext",
            "id": "newsletter_description",
            "label": {
              "en": "Text",
              "de": "Text",
              "es": "Texto",
              "fr": "Texte",
              "pt-PT": "Texto"
            },
            "default": {
              "en": "<p>Describe the benefits of your newsletter</p>",
              "de": "<p>Beschreiben Sie die Vorteile Ihres Newsletters</p>",
              "es": "<p>Describe las ventajas de tu boletín de noticias</p>",
              "fr": "<p>Décrivez les avantages de votre newsletter</p>",
              "pt-PT": "<p>Descreva os benefícios do seu boletim informativo</p>"
            }
        }
    ],
    "presets": [
        {
            "name": {
                "en": "Newsletter",
                "de": "Newsletter",
                "es": "Boletín de noticias",
                "fr": "Bulletin d'information",
                "pt-PT": "Newsletter"
            },
            "category": {
                "en": "Newsletter",
                "de": "Newsletter",
                "es": "Boletín de noticias",
                "fr": "Bulletin d'information",
                "pt-PT": "Newsletter"
            }
        }
    ],
    "enabled_on": {
      "groups": ["footer"],
      "templates": [
        "404",
        "article",
        "blog",
        "cart",
        "collection",
        "list-collections",
        "index",
        "page",
        "search",
        "product"
      ]
    }
}
{% endschema %}
