<section class="image-column-section">
    <div class="wrap-image-column-section{% if section.settings.reverse %} reverse{% endif %}">
        <div class="image-block">
            <div class="image"><img src="{{ section.settings.image |  img_url: 'master' }}" alt=""></div>
        </div>
        <div class="content-block">
            <div class="content">
                <div class="heading">{{ section.settings.heading }}</div>
                <div class="description">{{ section.settings.description }}</div>
                {% if section.settings.btn_text != blank %}
                    <a href="{{ section.settings.btn_link }}" class="btn">{{ section.settings.btn_text }}</a>
            {% endif %}
            </div>
        </div>
    </div>
</section>



{% schema %}
    {
        "name": "Image Column Section",
        "settings": [
                {
                    "type": "checkbox",
                    "id": "reverse",
                    "label": "Reverse Column",
                    "default":false
                },
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Image"
                },
                {
                    "type": "text",
                    "id": "heading",
                    "label": "Heading"
                },
                {
                    "type": "richtext",
                    "id": "description",
                    "label": "Description"
                },
                {
                    "type": "text",
                    "id": "btn_text",
                    "label": "Button Text"
                },
                {
                    "type": "url",
                    "id": "btn_link",
                    "label": "Button Link"
                }
            ],
            "presets": [
                {
                    "name": "Image Column Section"
                }
            ]
    }
    {% endschema %}