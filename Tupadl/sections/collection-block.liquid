<div class="collection">
    <div class="collection-container">
        <div class="subheading">
            <h4>{{ section.settings.sub_heading }}</h4>
        </div>
        <div class="heading">
            <h2>{{ section.settings.heading }}</h2>
        </div>
        <div class="collection-wrap">
            <div class="inner">
                {% for block in section.blocks %}
                    <a class="collection-item" href="{{ block.settings.collection.url }}">
                        <img src="{{ block.settings.collection.image.src |  img_url: 'master' }}" alt="{{ block.settings.collection.title }}">
                         <div class="wrap-title-line">
                            <p class="category-name">{{ block.settings.collection.title }}</p>
                            <div class="line"></div>
                         </div>
                    </a>       
                {% endfor %}
            </div>
        </div>
    </div>
</div>



{% schema %}
{
    "name": "Collection Block",
    "settings": [
        {
                "type": "text",
                "id": "sub_heading",
                "label": "Sub Heading"
            },
            {
                "type": "text",
                "id": "heading",
                "label": "Heading"
            }
        ],
        "blocks": [
                {
                "type": "Item",
                "name": "Collection",
                "settings": [
                    {
                        "type": "collection",
                        "id": "collection",
                        "label": "Collection"
                    }
                ]
                }
            ],
            "presets": [
                {
                    "name": "Collection Block"
                }
            ]
}
{% endschema %}