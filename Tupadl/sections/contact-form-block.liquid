<div class="contact-form">
    <div class="container">
        <div class="text-col">
            <div class="heading">
                <h2>{{ section.settings.heading }}</h2>
            </div>
            <div class="subtext">
                {{ section.settings.description }}
            </div>
            <div class="icons-wrapper">
              {% for block in section.blocks %}
                  <div class="icon-box">
                    <div class="icon"><img src="{{ block.settings.icon |  img_url: 'master' }}" alt=""></div>
                    <div class="text">{{ block.settings.heading }}</div>
                  </div>
              {% endfor %}
            </div>
        </div>
        <div class="form-col">
            {% form 'contact', class: 'contact-form-wrapper' %}

                <div class="contact-intro-input-row">
                    <div class="input__field">
                            <textarea name="contact[message]" placeholder="Message"></textarea>
                        </div>
                    <div class="wrapper-field">
                        <div class="input__field">
                            <input type="text" name="contact[name]" placeholder="Name" required="required">
                        </div>
                        <div class="input__field">
                          <input type="email" name="contact[email]" placeholder="Email" required="required">
                        </div>
                    </div>
                
                </div>
                <div class="contact-intro-input-submit">
                    <input type="submit" value="Submit">
                    {% if form.posted_successfully? %}
                    <div class="contact-intro-input-row-success">
                        <div style="color:green">success!</div>
                    </div>
                {% else %}
                    {{ form.errors | default_errors }}
                    {% endif %}
              </div>
           {% endform %}
        </div>
    </div>
</div>

{% schema %}
    {
      "name": "Contact - Form",
      "tag": "section",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Description"
        }
      ],
      "blocks": [
                {
                "type": "Item",
                "name": "Icon",
                "settings": [
                    {
                    "type": "image_picker",
                    "id": "icon",
                    "label": "Icon"
                    },
                    {
                    "type": "text",
                    "id": "heading",
                    "label": "Heading"
                    }
                ]
                }
            ],
      "presets": [
        {
          "name": "Contact - Form"
        }
      ]
    }
    {% endschema %}