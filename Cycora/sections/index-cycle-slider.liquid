<section class="index-cycle-slider cycle-slider">
    {% for block in section.blocks %}
        <div class="wrap-cycle-slider">
            <div class="content-block" style="background-image: url({{ block.settings.bg_image |  img_url: 'master' }});">
                <div class="top-content">
                    <h3 class="heading">{{ block.settings.heading }}</h3>
                    <div class="sub-heading">{{ block.settings.sub_heading }}</div>
                </div>
                <div class="middle-content">
                    <div class="main-title">{{ block.settings.title }}</div>
                    <div class="text">{{ block.settings.text }}</div>
                </div>
                <div class="bottom-content">
                    {% if block.settings.btn_text != blank %} <a class="link_btn" href="{{ block.settings.button_link }}">{{ block.settings.btn_text }} </a>{% endif %}
                </div>
            </div>
        </div>        
    {% endfor %}
</section>


{% schema %}
    {
      "name": "Index - Cycle Slider",
      "tag": "section",
      "class": "index-cycle-section",
      "settings": [
      ],
      "blocks": [
        {
          "name": "slide",
          "type": "slide",
          "settings":[
            {
                "type": "image_picker",
                "id": "bg_image",
                "label": "background Image"
            },
            {
                "type": "text",
                "id": "heading",
                "label": "Title"
            },
            {
                "type": "textarea",
                "id": "sub_heading",
                "label": "Sub Heading"
            
            },
            {
                "type": "text",
                "id": "title",
                "label": "Title"
            },
            {
                "type": "text",
                "id": "text",
                "label": "Text"
            },
            {
                "type": "text",
                "id": "btn_text",
                "label": "Link Title"
            },
            {
                "type": "url",
                "id": "button_link",
                "label": "Link"
            }
           
          ]
        }
      ],
      "presets": [
        {
          "name": "Index - Cycle Slider"
        }
      ]
    }
    {% endschema %}