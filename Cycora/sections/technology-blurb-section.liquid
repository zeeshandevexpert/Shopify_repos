<section class="technology-blurb-section">
    <div class="wrap-blurb-section">
        <div class="top-content-block">
            <div class="heading">{{ section.settings.heading }}</div>
            <div class="text">{{ section.settings.text }}</div>
        </div>
        <div class="column-block">
            {% for block in section.blocks %}

                <div class="wrapper">
                    <div class="image">
                        <img src="{{ block.settings.image |  img_url: 'master' }}" alt="">
                        {% comment %} {% include "loop-media-block" %} {% endcomment %}
                        <div class="content">
                            <div class="text">{{ block.settings.text }}</div>
                            <a href="{{ block.settings.link }}">{{ block.settings.link_text }}</a>
                        </div>
                        </div>
                  
                </div>

            {% endfor %}
        </div>
    </div>
</section>



{% schema %}

    {
    "name": "Technology - Blurb Block",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Heading"
        }, 
        {
            "type": "textarea",
            "id": "text",
            "label": "Text"
        } 
    ],
    "blocks": [
    {
      "name": "Block",
      "type": "block",
      "settings":[
        {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
        },
        {
            "type": "textarea",
            "id": "text",
            "label": "Text"
        },
        {
            "type": "url",
            "id": "link",
            "label": "Link"
        },
        {
            "type": "textarea",
            "id": "link_text",
            "label": "Link Text"
        }
      ]
    }
  ],
  "presets": [
    {
        "name": "Technology - Blurb Block"
    }
  ]
}

{% endschema %}
