<div class="container-style container-medium">
    <div class="blog-index-row">
        <div class="blog-index-col-left">
            <img src="{{ section.settings.image | img_url: '10x' }}"
                 class="lazyload"
                 data-src="{{ section.settings.image | img_url: '800x' }}"
                 data-widths="[800]"
                 data-sizes="auto"
                 tabindex="-1"
            />
        </div>
        <div class="blog-index-col-right">
            <div class="blog-index-top">
                <h2>{{ section.settings.title }}</h2>
                <p>{{ section.settings.description }}</p>
            </div>
            <img src="{{ section.settings.image | img_url: '10x' }}"
                 class="lazyload blog-index-mobile-only"
                 data-src="{{ section.settings.image | img_url: '800x' }}"
                 data-widths="[800]"
                 data-sizes="auto"
                 tabindex="-1"
            />
            <div class="blog-index-bottom">
                {% for block in section.blocks %}
                    <div class="blog-index-info-row">
                        <div class="blog-index-info-col-left">
                            <span>{{ block.settings.title }}</span>
                            <a href="{{ block.settings.link }}">{{ block.settings.description }}</a>
                        </div>
                        <div class="blog-index-info-col-right">
                            {% if block.settings.point_1 != blank %}<span>{{ block.settings.point_1 }}</span>{% endif %}
                            {% if block.settings.point_2 != blank %}<span>{{ block.settings.point_2 }}</span>{% endif %}
                            {% if block.settings.point_3 != blank %}<span>{{ block.settings.point_3 }}</span>{% endif %}
                        </div>
                    </div>
                {% endfor %}


            </div>
        </div>
    </div>
</div>

{% schema %}
{
  "name": "Blog - Bottom",
  "tag": "section",
  "class": "blog-index-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    }
  ],
  "blocks": [
    {
      "name": "Point",
      "type": "point",
      "settings":[
        {
          "type": "text",
          "id": "title",
          "label": "Year"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        },
        {
          "type": "text",
          "id": "point_1",
          "label": "Point 1"
        },
        {
          "type": "text",
          "id": "point_2",
          "label": "Point 2"
        },
        {
          "type": "text",
          "id": "point_3",
          "label": "Point 3"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Blog - Bottom"
    }
  ]
}
{% endschema %}