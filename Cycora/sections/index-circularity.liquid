<div class="container-style container-large">

    <div class="home-circularity-bottom">
      <h3>{{ section.settings.title_2 }}</h3>
  </div>


    <div class="home-circularity-percentage">
        <div class="container-style container-large">
            <div class="home-circularity-percentage-row">
                <div class="home-circularity-percentage-col">
                    <h4>{{ section.settings.block_1_title }}</h4>
                    <p>{{ section.settings.block_1_desc }}</p>
                </div>
                <div class="home-circularity-percentage-col">
                    <h4>{{ section.settings.block_2_title }}</h4>
                    <p>{{ section.settings.block_2_desc }}</p>
                </div>
                <div class="home-circularity-percentage-col-line">
                    <img src="{{ "circle-line-1.png" | asset_url }}" />
                </div>
                <div class="home-circularity-percentage-col right">
                    <img src="{{ section.settings.block_3_logo |img_url: 'master' }}" alt="">
                    <p>{{ section.settings.block_3_desc }}</p>
                </div>
            </div>
        </div>
    </div>

    
    <div class="home-circularity-middle">

        <div class="home-circularity-desktop">
            <div class="standard-cover">
              <a href="{{ section.settings.button_link }}" class="description-block">
              
                    <div class="content">
                            <div class="text">{{ section.settings.title }}</div>
                            {% if section.settings.button_title  != blank %}  <span class="link">{{ section.settings.button_title }} </span>{% endif %}
                    </div>
                    </a>
            </div>
        </div>

        <div class="home-circularity-mobile">
          <div class="standard-cover">
            <a href="{{ section.settings.button_link }}" class="description-block">
            
                  <div class="content">
                          <div class="text">{{ section.settings.title }}</div>
                          {% if section.settings.button_title  != blank %}  <span class="link">{{ section.settings.button_title }} </span>{% endif %}
                  </div>
                  </a>
          </div>
        </div>
    </div>

</div>



{% schema %}
{
  "name": "Index - Circularity",
  "tag": "section",
  "class": "home-circularity-section",
  "settings": [
    {
      "type": "richtext",
      "id": "title_2",
      "label": "Title 2"
    },
    {
      "type": "text",
      "id": "block_1_title",
      "label": "Block 1 Title"
    },
    {
      "type": "richtext",
      "id": "block_1_desc",
      "label": "Block 1 Description"
    },
    {
      "type": "text",
      "id": "block_2_title",
      "label": "Block 2 Title"
    },
    {
      "type": "richtext",
      "id": "block_2_desc",
      "label": "Block 2 Description"
    },
    {
      "type": "image_picker",
      "id": "block_3_logo",
      "label": "Block 3 Logo"
    },
    {
      "type": "richtext",
      "id": "block_3_desc",
      "label": "Block 3 Description"
    },
    {
      "type": "header",
      "content": "Media Block"
    },
    {
      "type": "select",
      "id": "media_type",
      "label": "Media Type",
      "options": [
        {
          "value": "image",
          "label": "image"
        },
        {
          "value": "vimeo_youtube_video",
          "label": "YouTube or Vimeo Video"
        },
        {
          "value": "video_file",
          "label": "HTML5 Video"
        }
      ],
      "default": "image"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "video_url",
      "id": "vimeo_youtube_video",
      "label": "Video",
      "accept": [
        "youtube",
        "vimeo"
      ]
    },
    {
      "type": "text",
      "id": "video_file",
      "label": "HTML5 Video File URL"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "button_title",
      "label": "Link Title"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Link"
    }
  ],
  "presets": [
    {
      "name": "Index - Circularity"
    }
  ]
}
{% endschema %}