
    <div class="standard-cover">
      {% include "media-block" %}
    </div>
    <div class="container-style overview-top-container">
        <div class="overview-top-content">
            <h2>{{ section.settings.title }}</h2>
            {{ section.settings.description }}
            <a class="overview-top-schedule" href="{{ section.settings.button_link }}">{{ section.settings.button_title }}</a>
            <span class="overview-top-process"><a href="javascript:void(0)" id="scroll_to_process">our process</a></span>
        </div>
    </div>

    {% if section.settings.text_color != blank %}
      <style>
        .overview-top-content h2, a.overview-top-schedule, .overview-top-content p, #scroll_to_process{
          color:{{ section.settings.text_color }};
        }
      </style>
    {% endif %}
{% schema %}
{
  "name": "Overview - Head",
  "tag": "section",
  "class": "overview-top-section",
  "settings": [
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color"
    },
    {
      "type": "textarea",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "text",
      "id": "button_title",
      "label": "Link Title"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Link"
    },
    {
      "type": "header",
      "content": "Media Block"
    },
    {
      "type": "select",
      "id": "media_type",
      "label": "Media Type",
      "options": [
        {
          "value": "image",
          "label": "image"
        },
        {
          "value": "vimeo_youtube_video",
          "label": "YouTube or Vimeo Video"
        },
        {
          "value": "video_file",
          "label": "HTML5 Video"
        }
      ],
      "default": "image"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "video_url",
      "id": "vimeo_youtube_video",
      "label": "YouTube or Vimeo Video",
      "accept": [
        "youtube",
        "vimeo"
      ]
    },
    {
      "type": "text",
      "id": "video_file",
      "label": "HTML5 Video File URL"
    }
  ],
  "presets": [
    {
      "name": "Overview - Head"
    }
  ]
}
{% endschema %}