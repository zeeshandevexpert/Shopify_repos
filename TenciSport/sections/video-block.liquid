<div class="video-link-section" style="background-image: url({{ section.settings.bg_image |  img_url: 'master' }});">
<div class="container">
    <div class="subheading">
        <h4>{{ section.settings.sub_heading }}</h4>
    </div>
    <div class="heading">
        <h2>{{ section.settings.heading }}</h2>
    </div>
    {% if section.settings.btn_text != blank %}
        <a href="{{ section.settings.btn_link }}" class="button-link">{{ section.settings.btn_text }}</a>    
    {% endif %}
</div>
</div>


{% schema %}
    {
        "name": "Video Block",
        "settings": [
            {
                "type": "image_picker",
                "id": "bg_image",
                "label": "Background Image"
            },
            {
                "type": "text",
                "id": "sub_heading",
                "label": "Sub Heading"
            },
            {
                "type": "text",
                "id": "heading",
                "label": "Heading"
            },
         
            {
                "type": "text",
                "id": "btn_text",
                "label": "Button Text"
            },
            {
                "type": "url",
                "id": "btn_link",
                "label": "Button Link"
            }
            ],
            "presets": [
                {
                    "name": "Video Block"
                }
            ]
    }
    {% endschema %}